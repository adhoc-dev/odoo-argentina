<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_arbusta.odoo_studio_equipmen_fb3e576e-1d41-4a90-9e83-bbfc57bf5cbb" model="ir.ui.view">
    <field name="name">Odoo Studio: equipment.tree customization</field>
    <field name="model">maintenance.equipment</field>
    <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='technician_user_id']" position="replace"/>
        <xpath expr="//tree[1]/field[@name='name']" position="after">
          <field name="model"/>
        </xpath>
        <xpath expr="//field[@name='employee_id']" position="after">
          <field name="x_employee_ids" widget="many2many_tags"/>
        </xpath>
        <xpath expr="//field[@name='department_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='assign_date']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='serial_no']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='category_id']" position="attributes">
          <attribute name="string">Categoría</attribute>
        </xpath>
        <xpath expr="//field[@name='category_id']" position="after">
          <field name="location"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.odoo_studio_equipmen_1038c6e0-cac7-48a0-bb83-e266c9616124" model="ir.ui.view">
    <field name="name">Odoo Studio: equipment.form customization</field>
    <field name="model">maintenance.equipment</field>
    <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='employee_id']" position="attributes">
          <attribute name="attrs">{'invisible': ['|', ('equipment_assign_to', '=', 'department'), ('equipment_assign_to', '=', False)], 'readonly':[('equipment_assign_to', '=', 'other')]}</attribute>
          <attribute name="string">Empleado</attribute>
        </xpath>
        <xpath expr="//field[@name='employee_id']" position="after">
          <field name="x_employee_ids" string="Empleados" widget="many2many_tags" attrs="{'invisible':['|', ('equipment_assign_to', '!=', 'other'), ('equipment_assign_to', '=', False)]}"/>
        </xpath>
        <xpath expr="//field[@name='department_id']" position="after">
          <field name="x_studio_field_zSGQr" string="Uso part-time" widget="boolean" help="Tildar si el equipo es utilizado por una sola persona part-time"/>
          <field name="x_studio_field_LfHb2" widget="boolean_toggle" string="Service técnico" attrs="{&quot;invisible&quot;: [&quot;&amp;&quot;,[&quot;category_id&quot;,&quot;!=&quot;,1],[&quot;category_id&quot;,&quot;!=&quot;,2]]}"/>
        </xpath>
        <xpath expr="//field[@name='technician_user_id']" position="attributes">
          <attribute name="groups">helpdesk.group_helpdesk_manager</attribute>
        </xpath>
        <xpath expr="//field[@name='cost']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <field name='warranty_date' position="after">
          <field name="x_studio_field_TSV4A" string="Alquilado"/>
          <field name="x_studio_field_BGI1f" string="Seguro" help="¿Está asegurado el equipo?"/>
          <field name="x_studio_field_L19xM" string="Leasing"/>
        </field>
        <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
          <page name="studio_page_MlXpo" string="Datos Técnicos">
            <group name="studio_group_MlXpo">
              <group name="studio_group_MlXpo_left">
                <field name="x_studio_field_X4XKN" string="Valoración"/>
                <field name="x_studio_field_S1rgc" string="Procesador"/>
                <field name="x_studio_field_oL0Da" string="RAM"/>
                <field name="x_studio_field_KNn6W" string="Almacenamiento"/>
                <field name="x_studio_field_Fma5o" string="MAC Adress"/>
                <field name="bateria"/>
                <field name="adaptador"/>
              </group>
              <group name="studio_group_MlXpo_right">
                <field name="x_studio_field_IcWSQ" string="SO"/>
                <field name="x_studio_field_ryw64" string="SO Versión"/>
              </group>
            </group>
          </page>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.default_graph_view_f_7b9f780f-4e04-41b4-b469-84f6dd921b61" model="ir.ui.view">
    <field name="name">Default graph view for maintenance.equipment</field>
    <field name="model">maintenance.equipment</field>
    <field name="arch" type="xml">
      <graph string="Equipment">
        <field name="name" modifiers="{&quot;required&quot;: true}"/>
      </graph>
    </field>
  </record>
  <record id="personalizations_arbusta.default_pivot_view_f_b6d5f579-fe5e-4ed5-bbc1-f1e53a535b4d" model="ir.ui.view">
    <field name="name">Default pivot view for maintenance.equipment</field>
    <field name="model">maintenance.equipment</field>
    <field name="arch" type="xml">
      <pivot string="Equipment"/>
    </field>
  </record>
</odoo>
