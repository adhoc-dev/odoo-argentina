<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_arbusta.odoo_studio_sale_sub_f4a94209-af39-4b8a-b032-5e0a49e2b7da" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.subscription.form.view customization</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='user_id']" position="attributes">
          <attribute name="string">Gestor</attribute>
        </xpath>
        <xpath expr="//field[@name='date']" position="after">
          <field name="x_studio_field_kkleC" string="Kickoff"/>
          <field name="x_studio_field_AMCA4" string="Renegociar rate" widget="date" help="Si corresponde renegociar rate, cargar la fecha correspondiente. Luego Odoo notificará 30 días antes de dicha fecha"/>
        </xpath>
        <xpath expr="//group[@name='main']" position="after">
          <group name="studio_group_Q0qFL">
            <group name="studio_group_Q0qFL_left" string="Facturación y otros">
              <field name="x_studio_field_t74nz" string="Sector Cliente" help="Muestra el dato de Contactos - Cliente - Ventas y compras - Sector"/>
              <field name="x_studio_field_a96Q7" string="Facturación esperada" widget="monetary" help="Valor total del contrato (es decir facturación mensual por cantidad de meses)"/>
              <field name="x_studio_field_fRhqO" string="Horas totales" help="Cantidad total de horas contratadas (horas mensuales por cantidad de meses)"/>
            </group>
          </group>
        </xpath>
        <xpath expr="//field[@name='analytic_account_id']" position="after">
          <field name="x_studio_field_LQKkN" string="SO del proyecto"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.odoo_studio_sale_sub_38c17f0f-fea5-4fa1-b3a7-6dc14f618dfe" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.subscription.list customization</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_list"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='percentage_satisfaction']" position="replace"/>
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="analytic_account_id"/>
        </xpath>
        <xpath expr="//field[@name='user_id']" position="after">
          <xpath expr="//field[@name='recurring_next_date']" position="move"/>
        </xpath>
        <xpath expr="//field[@name='company_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='recurring_next_date']" position="attributes">
          <attribute name="string">Próxima factura</attribute>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
