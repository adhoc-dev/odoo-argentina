<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_arbusta.odoo_studio_project__a747cd40-952e-4b3b-af5a-1dd9dc91627a" model="ir.ui.view">
    <field name="name">Odoo Studio: project.project.form customization</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="priority">25</field>
    <field name="arch" type="xml">
      <data>
        <page name="settings" position="after">
          <page name="description_page" string="Descripción">
            <field name="description"/>
          </page>
        </page>
        <xpath expr="//field[@name='user_id']" position="attributes">
          <attribute name="attrs">{"readonly": [["active","=",False]]}</attribute>
          <attribute name="string">Líder de Tribu</attribute>
        </xpath>
        <xpath expr="//field[@name='user_id']" position="after">
          <field name="x_studio_field_D7BUq" string="Service Owner" attrs="{}"/>
          <field name="x_studio_field_eTFPK" string="Equipo"/>
        </xpath>
        <field name= 'date_start' position="attributes">
          <attribute name="widget">date</attribute>
        </field>
        <field name='date' position="attributes">
          <attribute name="widget">date</attribute>
        </field>
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="x_studio_field_b1glF" string="Horas teóricas" attrs="{}"/>
          <field name="x_studio_field_6Vp7N" string="Carpeta Drive"/>
          <field name="x_studio_field_E3Ha4" string="Archivo Kick Off"/>
        </xpath>
        <xpath expr="//field[@name='analytic_account_id']" position="before">
          <field name="x_studio_field_8MFbu" string="TribuX" attrs="{}" widget="selection"/>
          <field name="x_studio_field_PkoH6" widget="many2many_tags" string="Subservicio" help="Uno o más subservicios según archivo "/>
        </xpath>
        <xpath expr="//field[@name='analytic_account_id']" position="after">
          <field name="x_studio_field_QI5H4" string="Industria" help="Tipo de industria (en caso de no existir la opción adecuada, seleccionar Otra y cargar en solapa Descripción para luego agregar al desplegable)" attrs="{}"/>
        </xpath>
        <group name='misc' position="attributes">
          <attribute name="string">Gestión</attribute>
        </group>
        <xpath expr="//field[@name='resource_calendar_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="groups">base.group_user</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
          <page name="studio_page_RDkiG" string="Técnico">
            <group name="studio_group_RDkiG">
              <group name="studio_group_RDkiG_left">
                <field name="x_studio_field_OJHzP" string="Complejidad" widget="selection"/>
                <field name="link_analisis" widget="url"/>
              </group>
              <group name="studio_group_RDkiG_right">
                  <field name="x_studio_field_d19Se" widget="many2many_tags" string="Skills requeridos"/>
              </group>
            </group>
          </page>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.odoo_studio_project__d6e505ad-0aae-4d3d-8eef-8fd5a6280cfe" model="ir.ui.view">
    <field name="name">Odoo Studio: project.project.tree customization</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='partner_id']" position="replace">
          <field name="x_studio_field_D7BUq"/>
          <field name="x_studio_field_b1glF"/>
          <field name="stage_id"/>
        </xpath>
        <xpath expr="//tree[1]/field[@name='name']" position="after">
          <field name="partner_id"/>
          <field name="x_studio_field_8MFbu"/>
          <field name="date_start"/>
          <field name="date"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.default_graph_view_f_f39030b2-008e-45f9-8352-18f4c9c05cdd" model="ir.ui.view">
    <field name="name">Default graph view for project.project</field>
    <field name="model">project.project</field>
    <field name="arch" type="xml">
      <graph string="Project">
        <field name="name" modifiers="{&quot;required&quot;: true}"/>
      </graph>
    </field>
  </record>
  <record id="personalizations_arbusta.default_pivot_view_f_1d708b81-4eda-4035-8a78-c486cba0705b" model="ir.ui.view">
    <field name="name">Default pivot view for project.project</field>
    <field name="model">project.project</field>
    <field name="arch" type="xml">
      <pivot string="Project"/>
    </field>
  </record>
    <record id="personalizations_arbusta_project_tree" model="ir.ui.view">
    <field name="name">Personalización por módulo: project_tree</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project"/>
    <field name="arch" type="xml">
      <data>
        <field name="partner_id" position="after">
          <field name="tribu"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta_project_form" model="ir.ui.view">
    <field name="name">Personalización por módulo: project_form</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="arch" type="xml">
      <data>
        <field name="analytic_account_id" position="before">
          <field name="tribu"/>
        </field>
      </data>
    </field>
  </record>
</odoo>
