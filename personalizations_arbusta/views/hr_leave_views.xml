<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_arbusta.odoo_studio_hr_leave_6f9009b7-432b-4d62-a297-cd97529ebbe3" model="ir.ui.view">
    <field name="name">Odoo Studio: hr.leave.view.form customization</field>
    <field name="model">hr.leave</field>
    <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='employee_id']" position="attributes">
          <attribute name="invisible"/>
          <attribute name="attrs">{}</attribute>
        </xpath>
        <xpath expr="//field[@name='department_id']" position="attributes">
          <attribute name="attrs">{"readonly": [["state","not in",["draft","confirm"]]]}</attribute>
          <attribute name="invisible"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.odoo_studio_hr_holid_3b423326-f356-4ba1-b3ff-57c040775c84" model="ir.ui.view">
    <field name="name">Odoo Studio: hr.holidays.view.tree customization</field>
    <field name="model">hr.leave</field>
    <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree_my"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//tree[1]/field[@name='name']" position="replace"/>
        <xpath expr="//field[@name='holiday_type']" position="after">
          <field name="x_studio_field_81Rd7"/>
          <field name="display_name"/>
          <field name="x_studio_field_5NlsG"/>
        </xpath>
        <xpath expr="//field[@name='date_from']" position="attributes">
          <attribute name="widget">date</attribute>
        </xpath>
        <xpath expr="//field[@name='date_to']" position="attributes">
          <attribute name="widget">date</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_arbusta.odoo_studio_hr_holid_18af4ac3-5e46-4ea8-b7bb-86819f17f861" model="ir.ui.view">
    <field name="name">Odoo Studio: hr.holidays.view.tree customization</field>
    <field name="model">hr.leave</field>
    <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
    <field name="active" eval="False"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='holiday_type']" position="replace"/>
      </data>
    </field>
  </record>
</odoo>
