<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="name">account.journal.form</field>
        <field name="inherit_id" ref="l10n_ar.view_account_journal_form"/>
        <field name="arch" type="xml">

            <field name="l10n_ar_afip_pos_partner_id" position="attributes">
                <attribute name="attrs">{'invisible':['|', '|', ('l10n_latam_country_code', '!=', 'AR'), ('type', '!=', 'sale'), ('l10n_ar_afip_pos_system', '=', 'NOT_APPLY')], 'required':[('l10n_latam_country_code', '=', 'AR'), ('l10n_latam_use_documents', '=', True), ('type', '=', 'sale')]}</attribute>
            </field>

            <field name="l10n_ar_afip_pos_partner_id" position="after">
                <field name="l10n_latam_document_type_ids" domian="[('country_id.code', '=', 'AR')]" attrs="{'invisible': [('l10n_ar_afip_pos_system', '!=', 'NOT_APPLY')]}">
            </field>

            <field name="l10n_ar_afip_pos_number" position="attributes">
                <attribute name="attrs">{'invisible':[('l10n_ar_afip_pos_system', '=', 'NOT_APPLY')]}</attribute>
            </field>

        </field>
    </record>

</odoo>
