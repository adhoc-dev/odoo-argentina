<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_partner_form_inherit_personalizations" model="ir.ui.view">
        <field name="name">res.partner.personalizations.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Campos Personalizados">
                    <group>
                        <field name="cant_madres"/>
                        <field name="genetica"/>
                        <field name="linea_inseminacion"/>
                        <field name="prov_inseminacion"/>
                        <field name="compra_semen"/>
                        <field name="prov_dosis_semen"/>
                        <field name="linea_vacunas"/>
                        <field name="prov_vacunas"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <record id="res_partner_search_inherit_personalizations" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="cant_madres"/>
                <field name="genetica"/>
                <field name="linea_inseminacion"/>
                <field name="prov_inseminacion"/>
                <field name="compra_semen"/>
                <field name="prov_dosis_semen"/>
                <field name="linea_vacunas"/>
                <field name="prov_vacunas"/>
            </field>
        </field>
    </record>
</odoo>
