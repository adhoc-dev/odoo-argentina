<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="purchase_order_line_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_planned" position="before">
                <field name="observations" optional="show"/>
            </field>
        </field>
    </record>

    <record id="purchase_order_line_inherit" model="ir.ui.view">
        <field name="name">purchase.order.line.inherit</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="date_planned" position="after">
                <field name="observations"/>
            </field>
        </field>
    </record>
</odoo>
