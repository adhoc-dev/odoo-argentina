<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_property_form_personalizations" model="ir.ui.view">
        <field name="name">view.partner.property.form.personalizations</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_edit_only')]" position="after">
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('product_pricelist_state', '=', False)]}">
                    Para <field name="state_id"/> se sugiere la tarifa: <field name="product_pricelist_state"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>