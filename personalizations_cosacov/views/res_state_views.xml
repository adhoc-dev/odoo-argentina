<?xml version="1.0"?>
<odoo>
    <record id="view_country_state_tree_personalization" model="ir.ui.view">
        <field name="name">res.country.state.tree.personalization</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_tree"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="product_pricelist"/>
            </field>
        </field>
    </record>
    <record id="view_country_state_form_personalization" model="ir.ui.view">
        <field name="name">res.country.state.form.personalization</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_form"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="product_pricelist"/>
            </field>
        </field>
    </record>
</odoo>
