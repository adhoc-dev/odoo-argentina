<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_user_id" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_move_form_salesperson_assignment" model="ir.ui.view">
        <field name="name">account.move.form.salesperson.assignment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="p13n_estecma.view_move_form"/>
        <field name="groups_id" eval="[(4,ref('p13n_estecma.salesperson_assignment'))]"/>
        <field name="arch" type="xml">
            <field name="invoice_user_id" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>
</odoo>
