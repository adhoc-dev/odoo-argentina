  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_crm_lead_8cb32ea6-efe6-44d6-8e08-b25c4c14a0b9">
    <field name="name">Odoo Studio: crm.lead.form.lead customization</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//group[@name='categorization']/field[@name='campaign_id']" position="replace"/>
        <xpath expr="//form[1]" position="attributes">
          <attribute name="create">false</attribute>
          <attribute name="delete">true</attribute>
          <attribute name="edit">true</attribute>
        </xpath>
        <xpath expr="//field[@name='partner_name']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='contact_name']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="required">1</attribute>
        </xpath>
        <xpath expr="//field[@name='email_cc']/../field[@name='phone']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="required">1</attribute>
        </xpath>
        <xpath expr="//field[@name='tag_ids']" position="after">
          <field name="campaign_id" attrs="{}" required="1"/>
        </xpath>
      </data>
    </field>
  </record>
