<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_energesa.product_template_account">
    <field name="name">Vista Personalizada</field>
    <field name="model">product.template</field>
    <field ref="account.product_template_view_tree" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <field name='supplier_taxes_id' position="replace">
          <field name="replenishment_cost_type"/>
          <field name="standard_price"/>
        </field>
        <field name='taxes_id' position="replace">
          <field name="categ_id"/>
          <field name="standard_price"/>
          <field name="cost_method"/>
          <field name="computed_list_price"/>
          <field name="other_currency_list_price"/>
          <field name="list_price_type"/>
          <field name="computed_list_price_manual"/>
          <field name="cost_currency_id"/>
          <field name="replenishment_base_cost"/>
          <field name="replenishment_base_cost_on_currency"/>
          <field name="replenishment_cost"/>
          <!-- <field name="total_cost"/> -->
        </field>
      </data>
    </field>
  </record>
</odoo>
