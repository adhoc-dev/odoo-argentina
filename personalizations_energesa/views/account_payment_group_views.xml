<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_account__2e0bc920-17fb-42fa-83cb-72b425df982d">
    <field name="name">Odoo Studio: account.payment.group.tree customization</field>
    <field name="model">account.payment.group</field>
    <field ref="account_payment_group.view_account_payment_group_tree" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='payments_amount']" position="attributes">
          <attribute name="attrs">{}</attribute>
        </xpath>
        <xpath expr="//field[@name='payments_amount']" position="after">
          <field name="unmatched_amount"/>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.default_kanban_view__fdb469ed-8aee-49ec-be95-522fae4c7321">
    <field name="name">Default kanban view for account.payment.group</field>
    <field name="model">account.payment.group</field>
    <field type="xml" name="arch">
      <kanban string="Payment Group">
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
              <div class="o_kanban_card_content">
                <field name="name" modifiers="{&quot;readonly&quot;: true}"/>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.default_pivot_view_f_c1235ec8-56d9-4d8e-ab8f-448329b681a8">
    <field name="name">Default pivot view for account.payment.group</field>
    <field name="model">account.payment.group</field>
    <field type="xml" name="arch">
      <pivot string="Payment Group"/>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_default__e80a9f81-87be-4b85-9f7d-c6e1dd624d54">
    <field name="name">Odoo Studio: Default pivot view for account.payment.group customization</field>
    <field name="model">account.payment.group</field>
    <field ref="personalizations_energesa.default_pivot_view_f_c1235ec8-56d9-4d8e-ab8f-448329b681a8" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//pivot[1]" position="attributes">
          <attribute name="display_quantity">true</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_default__e3df8d62-9971-44f5-b954-56cf47722646">
    <field name="name">Odoo Studio: Default kanban view for account.payment.group customization</field>
    <field name="model">account.payment.group</field>
    <field ref="personalizations_energesa.default_kanban_view__fdb469ed-8aee-49ec-be95-522fae4c7321" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//kanban[1]" position="attributes">
          <attribute name="default_group_by">state</attribute>
        </xpath>
        <xpath expr="//kanban[1]/templates[1]" position="before">
          <field name="x_stage_id"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
