<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_res_part_ee6a4699-d133-4b3d-b623-f6b386fd60fc">
    <field name="name">Odoo Studio: res.partner.form customization</field>
    <field name="model">res.partner</field>
    <field ref="base.view_partner_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='type']" position="before">
          <field name="id"/>
          <field name="x_location" placeholder="URL Google Maps" string="Ubicacion (URL GM)"/>
        </xpath>
        <xpath expr="//field[@name='afip_responsability_type_id']" position="attributes">
          <attribute name="string">AFIP Responsability Type</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='email']" position="attributes">
          <attribute name="string">*Email</attribute>
        </xpath>
        <xpath expr="//field[@name='property_purchase_currency_id']" position="attributes">
          <attribute name="attrs">{"required": [["supplier","=",True]]}</attribute>
          <attribute name="domain">[["name","!=","ARS"]]</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_res_part_0050f44a-6416-4bfc-9fef-e5eef03cb18c">
    <field name="name">Odoo Studio: res.partner.select customization</field>
    <field name="model">res.partner</field>
    <field ref="base.view_res_partner_filter" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//search[1]/field[@name='name']" position="after">
          <field name="mobile"/>
          <field name="email"/>
        </xpath>
        <xpath expr="//field[@name='id_numbers']" position="after">
          <field name="id"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
