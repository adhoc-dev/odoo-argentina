  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__7e9a0b91-18fa-429e-baa1-f26c6951c958">
    <field name="name">Odoo Studio: project.task.calendar customization</field>
    <field name="model">project.task</field>
    <field eval="[(6, 0, [ref('personalizations_energesa.res_groups_167')])]" name="groups_id"/>
    <field ref="project.view_task_calendar" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//calendar[1]" position="attributes">
          <attribute name="color">x_instaladores</attribute>
          <attribute name="date_start">date_start</attribute>
          <attribute name="date_stop">x_fecha_fin_calc</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__cd62bf83-9c5a-4ec9-bba4-a22348ec62f7">
    <field name="name">Odoo Studio: project.task2.inherit.subtask customization</field>
    <field name="model">project.task</field>
    <field ref="project_ux.view_task_form2_subtask" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='user_id']" position="after">
          <field name="x_department" attrs="{&quot;required&quot;: [&quot;|&quot;,[&quot;parent_id&quot;,&quot;=&quot;,False],[&quot;project_id&quot;,&quot;!=&quot;,83]], &quot;invisible&quot;: [&quot;|&quot;,[&quot;parent_id&quot;,&quot;=&quot;,False],[&quot;project_id&quot;,&quot;!=&quot;,83]]}"/>
        </xpath>
        <xpath expr="//field[@name='sale_line_id']" position="attributes">
          <attribute name="attrs">{"invisible": [["parent_id","!=",False]], "readonly": [["parent_id","!=",False]]}</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__cb21f11d-ca87-42da-85ac-5603c46cbc68">
    <field name="name">Odoo Studio: project.task.kanban.inherit customization</field>
    <field name="model">project.task</field>
    <field ref="project_ux.view_task_kanban_inherit" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='date_start']" position="attributes">
          <attribute name="attrs">{"invisible": [["x_department","!=",False]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='date_start']" position="after">
          <field display="full" name="date_last_stage_update" attrs="{&quot;invisible&quot;: [[&quot;x_department&quot;,&quot;=&quot;,False]]}"/>
        </xpath>
        <xpath expr="//field[@name='x_instaladores']" position="attributes">
          <attribute name="attrs">{"invisible": [["x_department","!=",False]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='x_vendedor']" position="attributes">
          <attribute name="attrs">{"invisible": [["x_department","!=",False]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='x_vendedor']" position="after">
          <field display="full" name="x_department" attrs="{&quot;invisible&quot;: [[&quot;x_department&quot;,&quot;=&quot;,False]]}"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
