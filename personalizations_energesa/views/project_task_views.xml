<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__bb685d3c-a71f-4336-a621-b9d5855e6567">
    <field name="name">Odoo Studio: project.task.tree customization</field>
    <field name="model">project.task</field>
    <field ref="project.view_task_tree2" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='remaining_hours']" position="replace">
          <field name="date_last_stage_update"/>
        </xpath>
        <xpath expr="//field[@name='planned_hours']" position="replace">
          <field name="date_start" widget="date"/>
        </xpath>
        <xpath expr="//field[@name='project_id']" position="replace">
          <field name="tag_ids" widget="many2many_tags"/>
        </xpath>
        <xpath expr="//field[@name='stage_id']" position="after">
          <field name="create_date"/>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__5af6c0b9-76a8-4d82-b277-453a20838f00">
    <field name="name">Odoo Studio: project.task.form customization</field>
    <field name="model">project.task</field>
    <field ref="project.view_task_form2" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='date_deadline']" position="replace">
          <field name="date_start" widget="datetime"/>
          <field name="x_duration" attrs="{}"/>
          <field name="x_fecha_fin_calc" string="Fecha Fin" attrs="{&quot;required&quot;: [&quot;|&quot;,[&quot;project_id&quot;,&quot;=&quot;,23],[&quot;project_id&quot;,&quot;=&quot;,24]]}"/>
        </xpath>
        <xpath expr="//field[@name='sale_line_id']" position="attributes">
          <attribute name="attrs">{"readonly": [["parent_id","!=",False]], "invisible": [["parent_id","!=",False]], "required": ["|",["project_id","=",23],["project_id","=",24]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='sale_line_id']" position="after">
          <field name="x_vendedor" studio-view-group-names="Employee" studio-view-group-ids="4" attrs="{&quot;invisible&quot;: [&quot;&amp;&quot;,[&quot;project_id&quot;,&quot;!=&quot;,23],[&quot;project_id&quot;,&quot;!=&quot;,24]]}"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='tag_ids']" position="after">
          <field name="x_instaladores" attrs="{&quot;required&quot;: [&quot;&amp;&quot;,[&quot;stage_id&quot;,&quot;!=&quot;,&quot;Inicio Contacto #&quot;],&quot;|&quot;,[&quot;project_id&quot;,&quot;=&quot;,23],[&quot;project_id&quot;,&quot;=&quot;,24]], &quot;invisible&quot;: [&quot;&amp;&quot;,[&quot;project_id&quot;,&quot;!=&quot;,23],[&quot;project_id&quot;,&quot;!=&quot;,24]]}"/>
          <field name="x_instalacion_type" attrs="{&quot;invisible&quot;: [&quot;&amp;&quot;,[&quot;project_id&quot;,&quot;!=&quot;,23],[&quot;project_id&quot;,&quot;!=&quot;,24]]}"/>
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="force_save">True</attribute>
          <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
          <page name="studio_page_tQzAU" string="Cliente">
            <group name="studio_group_tQzAU">
              <group name="studio_group_tQzAU_left" string="Contacto Entrega">
                <field name="x_partner_shipping_name"/>
                <field name="x_partner_shipping_mobile"/>
                <field name="x_partner_shipping_phone"/>
                <field name="x_partner_shipping_email"/>
                <field name="x_partner_shipping_street"/>
                <field name="x_partner_shipping_street2"/>
                <field name="x_partner_shipping_city"/>
                <field name="x_partner_shipping_state"/>
                <field name="x_partner_shipping_zip"/>
              </group>
              <group name="studio_group_tQzAU_right" string="Contacto Cliente">
                <field name="x_partner_name"/>
                <field name="x_partner_mobile"/>
                <field name="x_partner_phone"/>
                <field name="x_partner_email"/>
              </group>
            </group>
          </page>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_energesa.odoo_studio_project__d21a7ff8-e7c3-4178-9629-a6dbf25e9752">
    <field name="name">Odoo Studio: project.task.kanban customization</field>
    <field name="model">project.task</field>
    <field ref="project.view_task_kanban" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='project_id']" position="replace">
          <field name="date_start" display="false" widget="date"/>
          <field display="false" name="x_duration" bold="True"/>
        </xpath>
        <xpath expr="//field[@name='tag_ids']" position="after">
          <field display="full" name="x_instaladores"/>
          <field display="full" name="x_vendedor"/>
        </xpath>
        <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[1]/div[3]/div[1]/field[@name='activity_ids']" position="after">
          <field name="effective_hours" string="Effective Hours"/>
        </xpath>
      </data>
    </field>
  </record>
