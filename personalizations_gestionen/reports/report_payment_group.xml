<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_header_gestionen">
        <div>
            <div class="row">
                <div name="right-upper-side" class="col-12 text-right" style="padding-left: 0px;" t-if="not pre_printed_report">
                    <h4 t-att-style="'color: %s;' % o.company_id.primary_color"><strong>
                        Recibo
                    </strong></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-right" style="padding-left: 0px;">
                    <t t-if="not pre_printed_report">
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color">Nro: </span><span t-esc="report_number"/>
                    </t>
                    <br/>
                    <span t-att-style="'color: %s;' % o.company_id.secondary_color">Fecha: </span><span t-esc="report_date" t-options='{"widget": "date"}'/>
                </div>
            </div>
        </div>
        <hr/>
    </template>

    <template id="report_payment_group_document_gestionen" inherit_id="l10n_ar_ux.report_payment_group_document" primary="True">
        <t t-set="custom_header" position="attributes">
            <attribute name="t-value">'personalizations_gestionen.custom_header_gestionen'</attribute>
        </t>
        <xpath expr="//span[@t-field='o.partner_id.l10n_ar_afip_responsibility_type_id']//../strong[2]" position="replace"/>
        <span t-field="o.partner_id.l10n_ar_afip_responsibility_type_id" position="replace"/>
        <xpath expr="//table[3]" position="after">
            <div style="position:absolute;top:850px;right:100px; page-break-inside: avoid;">
                Recib√≠ conforme,
            </div>
        </xpath>
    </template>

    <template id="report_payment_group_gestionen">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="personalizations_gestionen.report_payment_group_document_gestionen" t-lang="lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_payment_gestionen" model="ir.actions.report">
        <field name="name">personalizations_gestionen.report_payment_group_gestionen</field>
        <field name="model">account.payment.group</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">personalizations_gestionen.report_payment_group_gestionen</field>
        <field name="report_file">personalizations_gestionen.report_payment_group_gestionen</field>
        <field name="attachment">'Recibo.pdf'</field>
        <field name="print_report_name">'Recibo'</field>
        <field name="binding_model_id" ref="model_account_payment_group"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
