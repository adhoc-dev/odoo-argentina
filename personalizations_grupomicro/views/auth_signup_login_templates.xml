<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="auth_signup_fields_grupomicro" inherit_id="auth_signup.fields" name="campos de registro extendido">
            <xpath expr="//div[hasclass('field-confirm_password')]" position="after">
                <div class="form-group field-phone">
                    <label for="phone" class="control-label">Teléfono</label>
                    <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control" requiered="required" t-att-readonly="'readonly' if only_passwords else None"
	                t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                </div>
                <div class="form-group field-identification_type">
                    <label for="l10n_latam_identification_type_id" class="control-label">Tipo de Identificación</label>
                    <select name="l10n_latam_identification_type_id" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
	                    t-att-autofocus="'autofocus' if login and not only_passwords else None">
                        <option value="">Seleccionar</option>
                        <t t-foreach="identifications or []" t-as="identification_type">
                            <option t-att-value="identification_type.id">
                                <t t-esc="identification_type.name" />
                            </option>
                        </t>
                    </select>
                </div>
                <div class="form-group field-responsability_type">
                    <label for="l10n_ar_afip_responsibility_type_id" class="control-label">Tipo de Responsabilidad</label>
                    <select name="l10n_ar_afip_responsibility_type_id" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
	                    t-att-autofocus="'autofocus' if login and not only_passwords else None">
                        <option value="">Seleccionar</option>
                        <t t-foreach="responsabilities or []" t-as="responsability_type">
                            <option t-att-value="responsability_type.id">
                                <t t-esc="responsability_type.name" />
                            </option>
                        </t>
                    </select>
                </div>
                <div class="form-group field-vat">
                    <label for="vat" class="control-label">CUIT/DNI (Sin guiones o puntos)</label>
                    <input type="text" name="vat" t-att-value="vat" id="vat" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
	                t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                </div>
            </xpath>
        </template>
</odoo>
