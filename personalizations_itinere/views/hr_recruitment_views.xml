<?xml version='1.0' encoding='UTF-8'?>

<odoo>
  <record id="hr_recruitment_form_view_personalization" model="ir.ui.view">
    <field name="name">hr.recruitment.form.personalization</field>
    <field name="model">hr.applicant</field>
    <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
    <field name="arch" type="xml">
      <field name="type_id" position="after">
        <field name="born_date" string="Fecha de nacimiento" required="1"/>
        <field name="address" string="Domicilio" required="1"/>
        <field name="city" string="Ciudad" required="1"/>
        <field name="state_id" string="Provincia" required="1"/>
      </field>
    </field>
  </record>
</odoo>
