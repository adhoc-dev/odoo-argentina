<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_create_multiple_credit_notes">
        <field name="name">account_create.multiple.credit.notes</field>
        <field name="model">account.create.multiple.credit.notes</field>
        <field name="arch" type="xml">
            <form string="Set Invoice Date">
                <group string="Ingrese la fecha">
                    <field name="invoice_date"/>
                </group>
                <footer>
                    <button name="confirm" string="Confirmar" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_create_multiple_credit_notes" model="ir.actions.act_window">
        <field name="name">Invertir m√∫ltiples facturas (con fecha)</field>
        <field name="res_model">account.create.multiple.credit.notes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>
</odoo>
