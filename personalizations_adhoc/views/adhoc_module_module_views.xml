<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- FORM VIEW -->
        <record id="view_adhoc_module_module_form" model="ir.ui.view">
            <field name="name">adhoc.module.module.form</field>
            <field name="model">adhoc.module.module</field>
            <field name="inherit_id" ref="saas_provider_adhoc.view_adhoc_module_module_form"/>
            <field name="arch" type="xml">
                <field name="module_id" position="after">
                    <field name="adhoc_product_id"/>
                </field>
                <field name="adhoc_category_id" position="replace">
                    <field name="product_category_id"/>
                </field>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_adhoc_module_module_search" model="ir.ui.view">
            <field name="name">adhoc.module.module.search</field>
            <field name="model">adhoc.module.module</field>
            <field name="inherit_id" ref="saas_provider_adhoc.view_adhoc_module_module_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="adhoc_product_id"/>
                </field>

                <field name="adhoc_category_id" position="replace">
                    <field name="product_category_id"/>
                </field>
                <filter name="group_by_adhoc_category_id" position="replace">
                    <filter name="group_by_product_category_id" string="Adhoc Category" domain="[]" context="{'group_by': 'product_category_id'}"/>
                </filter>

                <filter name="with_open_tasks" position="after">
                    <separator/>
                    <filter name="un_categorized" string="Un-Categorized" domain="[('adhoc_product_id', '=', False)]"/>
                </filter>

                <group>
                    <filter string="Adhoc Product" name="groupby_adhoc_product_id" context="{'group_by': 'adhoc_product_id'}"/>
                </group>
            </field>
        </record>


        <!-- TREE VIEW -->
        <record id="view_adhoc_module_module_tree" model="ir.ui.view">
            <field name="name">adhoc.module.module.tree</field>
            <field name="model">adhoc.module.module</field>
            <field name="inherit_id" ref="saas_provider_adhoc.view_adhoc_module_module_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="adhoc_product_id" optional="show"/>
                </field>
                <field name="adhoc_category_id" position="replace">
                    <field name="product_category_id" optional="hide"/>
                </field>
            </field>
        </record>

</odoo>
