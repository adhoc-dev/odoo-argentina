<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_salary_category_form" model="ir.ui.view">
        <field name="name">hr.salary_category.form</field>
        <field name="model">hr.salary_category</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="currency_id" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_salary_category_tree" model="ir.ui.view">
        <field name="name">hr.salary_category.tree</field>
        <field name="model">hr.salary_category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="amount"/>
                <field name="currency_id" options="{'no_create': True}"/>
                <field name="job_seniority_ids" widget="many2many_tags" groups="hr.group_hr_manager"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_salary_category" model="ir.actions.act_window">
        <field name="name">Salary Category</field>
        <field name="res_model">hr.salary_category</field>
    </record>

    <menuitem
        id="menu_view_hr_salary_category"
        action="action_hr_salary_category"
        parent="hr.menu_human_resources_configuration"
        sequence="1"/>
</odoo>
