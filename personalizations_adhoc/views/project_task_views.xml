<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">adhoc_product.project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="planned_date_begin" position="attributes">
                <attribute name="widget">datetime</attribute>
            </field>
            <field name="planned_date_end" position="attributes">
                <attribute name="widget">datetime</attribute>
            </field>
            <div name="adhoc_module_id" position="after">
                <field name="adhoc_product_id" attrs="{'required': [('use_databases', '=', True)]}" options="{'no_create_edit': True}" domain="[('parent_id', '!=', False)]"/>
            </div>
            <page name="sub_tasks_page" position="after">
                <page string="Tickets" attrs="{'invisible': [('use_databases', '=', False)]}">
                    <field name="ticket_ids" context="{
                        'default_dont_send_stage_email': True,
                        'default_name': name,
                        'default_project_id': project_id,
                        'default_partner_id': partner_id,
                        'default_adhoc_product_id': adhoc_product_id,
                        'default_ticket_description': description,
                        'default_description': task_description,
                    }">
                        <tree editable="bottom" delete="false">
                            <field name="id"/>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="team_id"/>
                            <field name="adhoc_product_id" required="True"/>
                            <!-- <field name="main_database_id"/> -->
                            <field name="stage_id"/>
                            <field name="project_id" invisible="1"/>
                            <field name="description" invisible="1"/>
                            <field name="ticket_description" invisible="1"/>
                            <field name="dont_send_stage_email" invisible="1"/>
                            <button name="get_formview_action" type="object" help="Open Ticket" icon="fa-pencil-square-o" />
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <record id="project_task_view_tree" model="ir.ui.view">
        <field name="name">adhoc_product.project.task.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="adhoc_product_id"  widget="badge" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="project_task_view_search" model="ir.ui.view">
        <field name="name">adhoc_product.project.task.search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="user_ids" position="after">
                <field name="adhoc_product_id"/>
            </field>
            <filter name="project" position="after">
                <filter string="Producto Adhoc" name="group_by_adhoc_product" context="{'group_by': 'adhoc_product_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
