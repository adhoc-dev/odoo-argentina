<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_seniority_form" model="ir.ui.view">
        <field name="name">hr.seniority.form</field>
        <field name="model">hr.seniority</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_seniority_tree" model="ir.ui.view">
        <field name="name">hr.seniority.tree</field>
        <field name="model">hr.seniority</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_seniority" model="ir.actions.act_window">
        <field name="name">Seniorities</field>
        <field name="res_model">hr.seniority</field>
    </record>

    <menuitem
        id="menu_view_hr_seniority"
        action="action_hr_seniority"
        parent="hr.menu_human_resources_configuration"
        sequence="1"/>
</odoo>
