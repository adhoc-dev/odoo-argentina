<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">adhoc_product.helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="adhoc_product_id" options="{'no_create_edit': True}" domain="[('parent_id', '!=', False)]"/>
            </field>
        </field>
    </record>

    <record id="helpdesk_ticket_view_tree" model="ir.ui.view">
        <field name="name">adhoc_product.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="adhoc_product_id"  widget="badge" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">adhoc_product.helpdesk.ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="adhoc_product_id"/>
            </field>
            <filter name="state" position="after">
                <filter string="Producto Adhoc" name="group_by_adhoc_product" context="{'group_by': 'adhoc_product_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
