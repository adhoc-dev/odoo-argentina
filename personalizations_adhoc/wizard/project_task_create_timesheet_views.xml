<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_create_timesheet_view_form" model="ir.ui.view">
        <field name="name">project.task.create.timesheet.wizard.form</field>
        <field name="model">project.task.create.timesheet</field>
        <field name="inherit_id" ref="hr_timesheet.project_task_create_timesheet_view_form"/>
        <field name="arch" type="xml">
            <field name="time_spent" position="after">
                <field name="task_commercial_partner_id" invisible="1"/>
                <field name="task_allow_billable" invisible="1"/>
                <field name="task_partner_id" invisible="1"/>
                <field name="so_line"
                       context="{'with_remaining_hours': True, 'with_price_unit': True}"
                       options="{'no_create': True, 'no_open': True}"
                       domain="[('product_uom.category_id.id', '=', 3), ('is_service', '=', True), ('order_partner_id', 'child_of', task_commercial_partner_id), ('is_expense', '=', False), ('state', 'in', ['sale', 'done'])]"
                       attrs="{'invisible': ['|', ('task_allow_billable', '=', False), ('task_partner_id', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>
