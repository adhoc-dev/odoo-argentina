<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_pricelist_view_inherit">
        <field name="name">product.pricelist.form</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='item_ids']//tree//field[@name='name']" position="after">
                <field name="brand_id" attrs="{'invisible':[('applied_on', 'not in', ('3_global', '2_product_category'))]}"/>
                <field name="manufacturer" attrs="{'invisible':[('applied_on', 'not in', ('3_global', '2_product_category'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>
