<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_header_neored" priority="99" inherit_id="l10n_ar.custom_header">
        <xpath expr="//span[@t-esc='report_number']//.." position="replace">
          <t t-if="not print_report_number">
          </t>
          <t t-else="">
            <t t-if="not pre_printed_report">
               <!--(7) Numero punto venta - (8) numero de documento -->
              <span t-att-style="'color: %s;' % o.company_id.secondary_color">Nro: </span><span t-esc="report_number"/>
            </t>
          </t>
        </xpath>
    </template>
    <template id="report_delivery_document_neored" priority="99" inherit_id="stock.report_delivery_document">
        <t t-set="pre_printed_report" position="attributes">
          <attribute name="t-value">False</attribute>
        </t>
        <!-- Ticket 36155 -->
        <t t-set="pre_printed_report" position="after">
           <t t-set="print_report_number" t-value="o.book_id.print_report_number"/>
        </t>
        <!-- Fin Ticket 36155 -->
        <!--Remito no está en estado done (hecho)-->
        <th name="th_sm_product" position="before">
          <th name="th_sm_cod_neored"><strong>Cod. Neored</strong></th>
        </th>
        <th name="th_sm_product" position="after">
          <th name="th_sm_cod_prov"><strong>Cod. Prov.</strong></th>
        </th>
        <th name="th_sm_quantity" position="after">
          <th name="th_sm_units"><strong>Unidades</strong></th>
        </th>
        <!--Remito está en estado done-->
        <th name="th_sml_product" position="replace">
          <th name="th_sml_product" class="text-center" width="50%"><strong>Descripción</strong></th>
        </th>
        <th name="th_sml_product" position="before">
          <th name="th_sml_cod_neored" class="text-center" width="12%"><strong>Cod. Neored</strong></th>
        </th>
        <th name="th_sml_product" position="after">
          <th name="th_sml_cod_prov" class="text-center" width="10%"><strong>Cod. Prov.</strong></th>
        </th>
        <th name="th_sml_quantity" position="after">
          <th name="th_sml_units" class="text-center" width="10%"><strong>Un.</strong></th>
        </th>
        <xpath expr="//span[@t-field='move_line.product_id']//.." position="before">
           <td name="cod_neored" class="text-center" width="12%">
              <span t-field="move_line.product_id.default_code"/>
           </td>
        </xpath>
        <xpath expr="//span[@t-field='move_line.product_id']//.." position="after">
           <td name="cod_prov" class="text-center" width="10%">
              <span t-field="move_line.product_id.sellers_product_code"/>
           </td>
        </xpath>
        <xpath expr="//span[@t-field='move_line.product_uom_id']" position="replace"/>
        <xpath expr="//span[@t-field='move_line.qty_done']//.." position="after">
           <td name="product_uom_id" class="text-center" width="10%">
              <span t-field="move_line.product_uom_id"/>
           </td>
        </xpath>
    </template>
</odoo>
