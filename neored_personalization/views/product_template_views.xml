<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- product template views -->

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.neored.form</field>
        <field name="model">product.template</field>
        <!-- <field name="inherit_id" ref="product.product_template_form_view"/> -->
        <field name="inherit_id" ref="delivery.product_template_hs_code"/>
        <field name="arch" type="xml">
            <field name="hs_code" position="replace"/>
            <field name="categ_id" position="after">
                <field name="hs_code"/>
            </field>
            <field name="list_price" position="before">
                <field name="neored_image_url" groups="base.group_no_one"/>
            </field>
            <group name="purchase" position="before">
                <group string="Productos Comparables">
                    <field name="comparable_product_ids" nolabel="1">
                        <tree>
                        <field name="name"/>
                        <field name="main_seller_id"/>
                        <field name="replenishment_base_cost"/>
                        <field name="replenishment_cost"/>
                        <field name="list_price"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

    <record model="ir.ui.view" id="product_custom_search_view">
        <field name="name">product.template.neored.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_ux.product_custom_search_view"/>
        <field name="arch" type="xml">
            <field name="sellers_product_code" position="attributes">
                <attribute name="filter_domain">['|',('sellers_product_code','ilike',self),('seller_ids.product_code_2','ilike',self)]</attribute>
            </field>
        </field>
    </record>

    <record id="view_stock_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="virtual_available" position="after">
                <button type="object" name="action_external_stock_wizard" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" string="View External Stock Detail" icon="fa-sitemap" groups="base.group_user"/>
            </field>
        </field>
    </record>

    <!-- product product views -->

    <record id="view_stock_product_tree" model="ir.ui.view">
        <field name="name">product.product.stock.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree"/>
        <field name="arch" type="xml">
            <field name="virtual_available" position="after">
                <field name="type" invisible="1"/>
                <button type="object" name="action_external_stock_wizard" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" string="View External Stock Detail" icon="fa-sitemap" groups="base.group_user"/>
            </field>
        </field>
    </record>

</odoo>
