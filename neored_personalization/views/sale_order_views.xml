<odoo>
    <record model="ir.ui.view" id="sale_order_view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_ux.view_order_form"/>
        <field name="arch" type="xml">
            <button name="update_prices" position="attributes">
                <attribute name="attrs">{}</attribute>
            </button>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                <button type="object" name="action_external_stock_wizard" string="View External Stock Detail" icon="fa-sitemap" groups="base.group_user"/>
            </xpath>
        </field>
    </record>
</odoo>
