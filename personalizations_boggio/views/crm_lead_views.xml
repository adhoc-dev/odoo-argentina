<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_5614" model="ir.ui.view">
    <field name="name">fecha vencimiento</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
    <field name="arch" type="xml">
      <field name="date_deadline" position="attributes">
        <attribute name="invisible">False</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5905" model="ir.ui.view">
    <field name="name">abiertos iboggio</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
    <field name="arch" type="xml">
      <data>
        <filter name="assigned_to_me" position="before">
          <filter string="Abiertos" name="abiertos" domain="[['stage_id', 'not ilike', 'cancel'], ['stage_id', 'not ilike', 'gana'], ['stage_id', 'not ilike', 'perdi']]"/>
          <separator/>
          <filter string="Ultimos 15 dias" name="last_days" domain="[['create_date', '&gt;=', (context_today() - datetime.timedelta(days=15)).strftime('%Y-%m-%d')]]"/>
          <separator/>
        </filter>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7859" model="ir.ui.view">
    <field name="name">Odoo Studio: crm.lead.form.opportunity customization</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='team_id']" position="after">
          <field name="company_id"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
