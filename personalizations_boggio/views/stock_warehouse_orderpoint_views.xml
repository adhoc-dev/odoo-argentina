<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_5118" model="ir.ui.view">
    <field name="name">ver rotacion en stock minimo iboggio</field>
    <field name="model">stock.warehouse.orderpoint</field>
    <field name="priority" eval="199"/>
    <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree"/>
    <field name="arch" type="xml">
      <field name="product_min_qty" position="after">
        <field name="rotation"/>
        <field name="warehouse_rotation"/>
        <field name="qty_multiple"/>
        <field name="lead_days"/>
        <field name="lead_type" invisible="1"/>
        <field name="x_qty_available"/>
        <field name="x_virtual_available"/>
        <field name="x_abc_sales_combined"/>
      </field>
       <field name="product_id" position="after">
        <field name="x_brand"/>
        <field name="x_seller_id"/>
        <field name="x_supplier_code"/>
      </field>
      <field name="location_id" position="replace"/>
      <field name="product_uom" position="replace"/>
       <xpath expr="//field[@name='lead_type']" position="after">
        <field name="x_estrategia"/>
        <button type="action" name="%(personalizations_boggio.ir_act_server_2414)d" string="View Stock Detail" icon="fa-search-plus"/>
      </xpath>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5277" model="ir.ui.view">
    <field name="name">filtro por ubicaciones iboggio</field>
    <field name="model">stock.warehouse.orderpoint</field>
    <field name="inherit_id" ref="stock.warehouse_orderpoint_search"/>
    <field name="arch" type="xml">
      <search>
        <field name="x_seller_id"/>
        <field name="x_supplier_code"/>
        <filter string="Almacen Rosario" name="location" domain="[('warehouse_id','=',2)]" context="{'location': 'ROS/Stock'}"/>
        <filter string="Ubica Rosario" name="location" domain="[('location_id','=',21)]" context="{'location': 'ROS/Stock'}"/>
        <filter string="Ubica Santa Fe" name="location SFE" domain="[('location_id','=',27)]" context="{'location': 'SFE/Stock'}"/>
        <filter string="Ubica Rafaela" name="location RAF" domain="[('location_id','=',33)]" context="{'location': 'RAF/Stock'}"/>
        <filter string="Ubica Motores" name="location MOT" domain="[('location_id','=',39)]" context="{'location': 'ROS/Stock/Motores y Cables Subterraneo'}"/>
        <filter string="Ubica Ilum" name="location ILU" domain="[('location_id','=',42)]" context="{'location': 'ROS/Stock/IluminaciÃ³n/Deposito Iluminacion'}"/>
        <filter string="Ubica IND" name="location IND" domain="[('location_id','=',38)]" context="{'location': 'ROS/Stock/Industrial'}"/>
        <filter string="No Publicado Web" name="website_published" domain="[('website_published','=',False)]"/>
      </search>
      <xpath expr="//search[1]/field[@name='name']" position="before">
        <field name="x_brand"/>
      </xpath>
      <xpath expr="//search[1]/field[@name='name']" position="after">
        <field name="x_estrategia"/>
      </xpath>
      <xpath expr="//field[@name='location_id']" position="after">
        <field name="x_abc_sales_combined"/>
      </xpath>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7805" model="ir.ui.view">
    <field name="name">Odoo Studio: stock.warehouse.orderpoint.form customization</field>
    <field name="model">stock.warehouse.orderpoint</field>
    <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
    <field name="arch" type="xml">


      <field name="name" position="attributes">
        <attribute name="invisible">0</attribute>
        <attribute name="readonly">0</attribute>
      </field>
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="x_supplier_code"/>
      </xpath>
      <xpath expr="//field[@name='company_id']" position="after">
        <field name="x_abc_sales_combined"/>
        <field name="x_rotacion"/>
        <field name="x_rotacion_warehouse"/>
        <button type="action" name="2414" string="View Stock Detail" icon="fa-search-plus"/>
      </xpath>
      <label for="lead_days" position="before">
        <field name="x_origen_compra"/>
        <field name="x_frec_compra"/>
        <field name="x_stddev_lead_days"/>
        <field name="x_date_act"/>
      </label>
      <xpath expr="//form[1]/sheet[1]/group" position="after">
        <notebook name="studio_notebook_re5dQ">
          <page name="studio_page_re5dQ" string="DDMRP">
            <group name="studio_group_re5dQ">
              <group name="studio_group_re5dQ_left" string="Datos MRP">
                <field name="x_tog"/>
                <field name="x_toy"/>
                <field name="x_tor"/>
                <field name="x_red_security"/>
              </group>
              <group name="studio_group_re5dQ_right">
                <field name="x_color_stock"/>
                <field name="x_estrategia"/>
                <field name="x_aux"/>
              </group>
            </group>
          </page>
        </notebook>
      </xpath>
    </field>
  </record>
</odoo>
