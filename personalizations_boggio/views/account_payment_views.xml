<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_4563" model="ir.ui.view">
    <field name="name">Boggio Personalization: account.payment.form.inherited</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account_check.view_account_payment_form_inherited"/>
    <field name="arch" type="xml">
      <field name="check_payment_date" position="attributes">
        <attribute name="attrs">{'invisible': [('payment_method_code', 'not in', ['received_third_check', 'issue_check'])], 'required': [('payment_method_code', 'in', ['received_third_check', 'issue_check'])]}</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4606" model="ir.ui.view">
    <field name="name">ver fecha vencimiento cheques iboggio	</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account_payment_group.view_account_payment_from_group_tree"/>
    <field name="arch" type="xml">
      <tree>
        <field name="state" position="after"/>
        <field name="check_payment_date"/>
      </tree>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5024" model="ir.ui.view">
    <field name="name">usuario en transfernecias de contabilidad iboggio</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account_payment_group.view_account_payment_transfer_tree"/>
    <field name="arch" type="xml">
      <field name="destination_journal_id" position="after">
        <field name="create_uid"/>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5498" model="ir.ui.view">
    <field name="name">fecha de pago invisible iboggio (Transferencias)</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account_payment_group.view_account_payment_transfer_form"/>
    <field name="arch" type="xml">
      <field name="payment_date" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5765" model="ir.ui.view">
    <field name="name">fecha de pago invisible iboggio (Pagos)</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <field name="payment_date" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
    </field>
  </record>
</odoo>
