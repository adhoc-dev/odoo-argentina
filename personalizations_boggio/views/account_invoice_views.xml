<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_4437" model="ir.ui.view">
    <field name="name">Boggio Personalization account.move.tree</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_invoice_tree"/>
    <field name="arch" type="xml">
      <field name="partner_id" position="after">
        <field name="create_uid"/>
        <field name="create_date"/>
      </field>
      <field name="amount_total" position="attributes">
        <attribute name="optional">show</attribute>
      </field>
      <tree position="attributes">
        <attribute name="default_order">create_date desc</attribute>
      </tree>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4454" model="ir.ui.view">
    <field name="name">Boggio Personalization move.form.inherit</field>
    <field name="model">account.move</field>
    <field eval="[(6, 0, [ref('account_invoice_control.group_restrict_edit_invoice')])]" name="groups_id"/>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="priority">199</field>
    <field name="arch" type="xml">
      <field name="sale_type_id" position="attributes">
        <attribute name="attrs">{'readonly':[('type','=','out_invoice'),('has_sales','=',True)]}</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4922" model="ir.ui.view">
    <field name="name">sacar boton de factura rectificada iboggio</field>
    <field name="model">account.move</field>
    <field name="priority">199</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <field name="product_id" position="after">
        <field name="x_supplier_code" attrs="{'invisible': [('parent.move_type', 'not in', ('out_invoice', 'in_invoice'))]}"/>
      </field>
      <field name="invoice_user_id" position="after">
        <field name="x_so_create_uid" readonly="1"/>
      </field>
      <field name="invoice_payment_term_id" position="after">
        <field name="x_pricelist_id"/>
      </field>
      <xpath expr="//form[1]/header[1]/button[@name='action_post']" position="attributes">
        <attribute name="groups">base.group_user</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_partner_bank_id']" position="attributes">
        <attribute name="groups">account.group_account_user</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount1']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='x_supplier_code']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount2']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount3']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='analytic_tag_ids']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='analytic_account_id']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
    </field>
  </record>
