  <record id="personalizations_boggio.ir_ui_view_7746" model="ir.ui.view">
    <field name="name">boton de pago de facturas iboggio</field>
    <field name="model">account.move</field>
    <field eval="[(6, 0, [ref('personalizations_boggio.res_groups_168')])]" name="groups_id"/>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <button name="action_invoice_sent" position="after">
        <button name="action_account_invoice_payment_group" id="account_invoice_payment_btn" type="object" states="open" string="Registrar pago" class="oe_highlight" modifiers="{'invisible':[['state','not in',['open']]]}"/>
