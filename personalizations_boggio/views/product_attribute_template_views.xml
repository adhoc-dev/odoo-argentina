<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_7944" model="ir.ui.view">
    <field name="name">agregar usuario iboggio</field>
    <field name="model">product.attribute.template</field>
    <field name="inherit_id" ref="product_attribute_template.product_attribute_template_form_view"/>
    <field name="arch" type="xml">
        <field name="product_attribute_ids" position="after">
          <field name="x_user_help" domain="[('active', '=', True), ('share', '=', False)]"/>
        </field>
        <field name="value_ids" position="replace"/>
        <field name="attribute_id" position="after">
          <field name="value_ids" widget="many2many_tags" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
        </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7984" model="ir.ui.view">
    <field name="name">Odoo Studio: product.attribute.template.form.view customization</field>
    <field name="model">product.attribute.template</field>
    <field name="inherit_id" ref="product_attribute_template.product_attribute_template_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='product_attribute_ids']" position="attributes">
          <attribute name="widget">many2many</attribute>
        </xpath>
        <xpath expr="//field[@name='x_user_help']" position="after">
          <field name="x_studio_field_KdzoJ" string="Orden de preguntas chatbot" help="ID de atributos separados por coma"/>
          <field name="x_chatbot_trained"/>
          <field name="x_simplificado"/>
        </xpath>
        <field name="line_ids" position="replace"/>
    </field>
  </record>
</odoo>
