<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_4438" model="ir.ui.view">
    <field name="name">Boggio Personalization res.partner.tree</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_tree"/>
    <field name="arch" type="xml">
      <data>
        <field name="display_name" position="after">
          <field name="ref"/>
        </field>
        <field name="phone" position="after">
          <field name="street"/>
        </field>
        <field name="email" position="after">
          <field name="main_id_number"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4450" model="ir.ui.view">
    <field name="name">readonly abm clientes iboggio</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('personalizations_boggio.res_groups_112')])]" name="groups_id"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <field name="user_id" position="replace"/>
        <field name="ref" position="replace"/>
        <field name="active" position="replace"/>
        <field name="require_purchase_order_number" position="replace"/>
        <field name="abc_sales_amount" position="replace"/>
        <field name="x_operate_with_checks" position="replace"/>
        <field name="company_id" position="before">
          <field name="user_id" readonly="True"/>
          <field name="ref" readonly="True"/>
          <field name="active" readonly="True"/>
          <field name="require_purchase_order_number" readonly="True"/>
          <field name="x_operate_with_checks" readonly="1"/>
          <field name="abc_sales_amount" readonly="True"/>
          <field name="x_abc_sales_freq" readonly="True"/>
          <field name="credit_limit" readonly="1"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4468" model="ir.ui.view">
    <field name="name">bloquear edicion/borrado/creado de clientes iboggio</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('personalizations_boggio.res_groups_142')])]" name="groups_id"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <form position="attributes">
        <attribute name="edit">false</attribute>
        <attribute name="create">false</attribute>
        <attribute name="delete">false</attribute>
      </form>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_4967" model="ir.ui.view">
    <field name="name">modificar opera con cheques iboggio</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="sale_require_purchase_order_number.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <field name="require_purchase_order_number" position="after">
          <field name="x_operate_with_checks"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5285" model="ir.ui.view">
    <field name="name">no es proveedor iboggio</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="arch" type="xml">
      <data>
        <filter name="supplier" position="after">
          <filter name="NOsupplier" domain="[('supplier','!=',1), ('parent_id', '=', False)]"/>
        </filter>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5308" model="ir.ui.view">
    <field name="name">comercial obligatorio iboggio</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <field name="user_id" position="attributes">
        <attribute name="required">1</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5371" model="ir.ui.view">
    <field name="name">agregado de datos del nosis</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('account.group_account_invoice')])]" name="groups_id"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <field name="trust" position="after">
        <field name="x_credit_nosis_score"/>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5586" model="ir.ui.view">
    <field name="name">Aviso de recibo automatico de remitos iboggio</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <field name="lang" position="after">
          <field name="x_no_recibe_remito"/>
          <field name="x_deuda_email"/>
          <field name="x_detalle_deuda_facturas"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5677" model="ir.ui.view">
    <field name="name">datos de proveedores iboggio - old view ok</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="account.partner_view_buttons"/>
    <field name="arch" type="xml">
      <data>
        <field name="invoice_warn_msg" position="after">
          <field name="x_lista_proveedor" attrs="{'invisible':[('supplier','=',False)] }"/>
          <field name="x_desc_pago_prov" attrs="{'invisible':[('supplier','=',False)] }"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5681" model="ir.ui.view">
    <field name="name">agregar afip responsability</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('sales_team.group_sale_salesman_all_leads')])]" name="groups_id"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <field name="main_id_number" position="after">
          <field name="afip_responsability_type_id"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5760" model="ir.ui.view">
    <field name="name">ocultar portales de comerciales</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <field name="user_id" position="attributes">
        <attribute name="domain">[('share','=',False)]</attribute>
      </field>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5825" model="ir.ui.view">
    <field name="name">sacar deuda de cliente y proveedor x lentitud iboggio</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('personalizations_boggio.res_groups_191')])]" name="groups_id"/>
    <field name="inherit_id" ref="account_debt_management.view_partner_inherit_debt_form"/>
    <field name="arch" type="xml">
      <data>
        <page name="customer_debt" position="replace"/>
        <page name="supplier_debt" position="replace"/>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5829" model="ir.ui.view">
    <field name="name">cambio de condicion de venta con nosis iboggio</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('account.group_account_invoice')])]" name="groups_id"/>
    <field name="inherit_id" ref="account_multicompany_ux.view_partner_property_form"/>
    <field name="arch" type="xml">
      <data>
        <button name="action_company_properties" position="replace"/>
        <field name="property_payment_term_ids" position="after">
          <button name="action_company_properties" string="(edit)" class="oe_link" type="object" context="{'property_field': 'property_payment_term_id'}" attrs="{'invisible':['|','|','|','|','|',('x_credit_nosis_score','=',0),('partner_latitude','=',0),('partner_longitude','=',0),  ('customer', '=', False),  ('date_partnership', '=', False) ,  ('date_review_next', '=', False)]}"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7666" model="ir.ui.view">
    <field name="name">cambiar lugar del boton de deuda iboggio</field>
    <field name="model">res.partner</field>
    <field name="priority" eval="99"/>
    <field eval="[(6, 0, [ref('personalizations_boggio.res_groups_111'), ref('account.group_account_invoice')])]" name="groups_id"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <button name="%(account_debt_management.action_account_debt_line)d" position="replace"/>
        <button name="%(sale.act_res_partner_2_sale_order)d" position="after">
          <button type="action" class="oe_stat_button" id="debt_detail" icon="fa-list" context="{'show_balance': 1, 'search_default_partner_id': active_id}" name="%(account_debt_management.action_account_debt_line)d" attrs="{'invisible': ['|', '&amp;', ('customer', '=', False), ('supplier', '=', False), '&amp;', ('is_company','=',False), ('parent_id','!=',False)]}">
            <div class="o_form_field o_stat_info">
              <span class="o_stat_value">
                <field name="debt_balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
              </span>
              <span class="o_stat_text">Debt Detail</span>
            </div>
          </button>
        </button>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7806" model="ir.ui.view">
    <field name="name">Odoo Studio: res.partner.form customization</field>
    <field name="model">res.partner</field>
    <field eval="[(6, 0, [ref('base.group_user'), ref('base.group_erp_manager'), ref('purchase.group_purchase_manager')])]" name="groups_id"/>
    <field name="priority" eval="99"/>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='internal_notes']/group[1]/separator[1]" position="before">
          <field name="website_description" studio-view-group-ids="3,5,50" widget="html"/>
          <field name="website_short_description" studio-view-group-ids="3,5,50" studio-view-group-names="Manager"/>
        </xpath>
        <xpath expr="//field[@name='property_purchase_currency_id']" position="after">
          <field name="x_order_cycle" studio-view-group-names="Multi Currencies" studio-view-group-ids="7"/>
          <field name="x_global_supply" studio-view-group-ids="7" studio-view-group-names="Multi Currencies"/>
          <field name="x_metodo_envio_compras" studio-view-group-ids="7" studio-view-group-names="Multi Currencies"/>
          <field name="x_metodo_envio_rafaela" studio-view-group-ids="7" studio-view-group-names="Multi Currencies"/>
        </xpath>
        <xpath expr="//field[@name='abc_sales_amount']" position="attributes">
          <attribute name="help">EE → 0-70% de los ventas E   → 70 a 80% C→ 80-90%  . resto  (valor por defecto) -  no tuvieron ventas en último tiempo</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7817" model="ir.ui.view">
    <field name="name">boton de deuda siempre visible</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="l10n_ar_account_reports.partner_view_buttons"/>
    <field name="arch" type="xml">
      <button name="open_action_followup" position="replace">
        <button type="object" class="oe_stat_button" name="open_action_followup" groups="account.group_account_user" icon="fa-list">
          <div class="o_field_widget o_stat_info">
            <span class="o_stat_value">
              <field name="credit_overdue" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </span>
            <span class="o_stat_text">Vencido</span>
          </div>
        </button>
      </button>
    </field>
  </record>
</odoo>
