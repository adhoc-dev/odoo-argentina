<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_7906" model="ir.ui.view">
    <field name="name">x_personalization_product_search_performance</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
      <field name="product_id" position="attributes">
        <attribute name="domain">"[('bom_ids', '!=', False), ('bom_ids.active', '=', True)]"</attribute>
      </field>
      <xpath expr="//button[@name='button_scrap']" position="replace"/>
      <xpath expr="//field[@name='location_src_id']" position="attributes">
        <attribute name="attrs">{}</attribute>
      </xpath>
      <!-- mark_as_done_invisible -->
       <xpath expr="//button[@name='button_mark_done'][2]" position="replace"/>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_8176" model="ir.ui.view">
    <field name="name">boton de cancelar vistible</field>
    <field name="model">mrp.production</field>
    <field eval="[(6, 0, [ref('account.group_account_manager')])]" name="groups_id"/>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
      <header>
        <button name="action_cancel" position="replace"/>
        <button name="action_cancel" type="object" string="Cancel"/>
      </header>
    </field>
  </record>
</odoo>
