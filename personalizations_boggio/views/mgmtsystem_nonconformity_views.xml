<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_5241" model="ir.ui.view">
    <field name="name">etiquetas en no conf. iboggio</field>
    <field name="model">mgmtsystem.nonconformity</field>
    <field name="priority" eval="199"/>
    <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_form"/>
    <field name="arch" type="xml">
      <field name="origin_ids" position="before">
        <field name="x_origen_no_conformidad"/>
      </field>
      <field name="origin_ids" position="after">
        <field name="x_etiqueta" widget="many2many_tags"/>
        <field name="closing_date" readonly="0"/>
        <field name="x_impacto"/>
      </field>
      <field name="reference" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='causes_analysis']" position="attributes">
        <attribute name="string">Análisis de causas</attribute>
      </xpath>
      <xpath expr="//field[@name='cause_ids']" position="attributes">
        <attribute name="attrs">{"readonly": [["state","not in",["analysis"]]]}</attribute>
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='action_ids']" position="attributes">
        <attribute name="attrs">{"readonly": [["state","not in",["pending"]]]}</attribute>
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5257" model="ir.ui.view">
    <field name="name">etiqueta no conformidades kanban iboggio</field>
    <field name="model">mgmtsystem.nonconformity</field>
    <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_kanban"/>
    <field name="arch" type="xml">
      <field name="message_needaction_counter" position="after">
        <field name="x_etiqueta"/>
      </field>
      <div class="oe_kanban_content" position="before">
        <div>
          <field name="x_etiqueta"/>
        </div>
      </div>
      <div class="oe_kanban_content" position="after">
        <div class="text-muted">
          <t t-if="record.closing_date.raw_value and record.closing_date.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
          <span t-attf-class="#{red || ''}">
            <i>
              <field name="closing_date"/>
            </i>
          </span>
        </div>
      </div>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5716" model="ir.ui.view">
    <field name="name">filtro por abiertos no conf. iboggio</field>
    <field name="model">mgmtsystem.nonconformity</field>
    <field name="priority" eval="199"/>
    <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_filter"/>
    <field name="arch" type="xml">
      <filter name="current" position="after">
        <separator orientation="vertical"/>
        <filter name="Abiertas" domain="[('state', 'not in', ('cancel','done'))]" string="Abiertas"/>
        <separator orientation="vertical"/>
        <filter name="Clientes" domain="[('origin_ids', '=', 4 )]" string="Clientes"/>
        <filter domain="[[&quot;origin_ids&quot;,&quot;ilike&quot;,&quot;aud%int&quot;]]" name="studio_filter_UrqL0" string="Auditoria interna"/>
        <filter domain="[[&quot;origin_ids&quot;,&quot;ilike&quot;,&quot;audit%ext&quot;]]" name="studio_filter_2D6B1" string="Auditoria externa"/>
        <filter name="Proveedores" domain="[('x_origen_no_conformidad', '=', 1 )]" string="Proveedores"/>
        <filter name="Proveedores" domain="[('x_origen_no_conformidad', '!=', 1 )]" string="No Proveedores"/>
        <filter name="Interno" domain="[('x_origen_no_conformidad', '=', 3 )]" string="Interno"/>
        <separator orientation="vertical"/>
        <filter string="Mi Responsabilidad" domain="[('responsible_user_id','=',uid)]" name="my_resp"/>
        <filter domain="[('manager_user_id','=',uid)]" name="studio_filter_1fRGc" string="Mi Gestión"/>
        <separator orientation="vertical"/>

      </filter>
      <xpath expr="//filter[@name='pending']" position="attributes">
        <attribute name="domain">[["state","in",["analysis"]]]</attribute>
      </xpath>

      <xpath expr="//field[@name='ref']" position="after">
        <field name="x_etiqueta"/>
        <field name="x_origen_no_conformidad" string="Donde ocurrió el error"/>
        <field name="partner_id" string="Partner Asociado"/>
      </xpath>
      <xpath expr="//field[@name='create_date']" position="after">
        <field name="manager_user_id"/>
      </xpath>
      <xpath expr="//field[@name='company_id']" position="after">
        <field name="origin_ids"/>
      </xpath>
      <xpath expr="//search[1]/group[2]/filter[5]" position="attributes">
        <attribute name="string">Partner Asociado</attribute>
      </xpath>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_5823" model="ir.ui.view">
    <field name="name">agregar impacto en no conf iboggio</field>
    <field name="model">mgmtsystem.nonconformity</field>
    <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_tree"/>
    <field name="arch" type="xml">
      <field name="stage_id" position="after">
        <field name="x_impacto"/>
      </field>
    </field>
  </record>
</odoo>
