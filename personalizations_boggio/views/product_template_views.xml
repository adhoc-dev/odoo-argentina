  <record id="personalizations_boggio.ir_ui_view_7671" model="ir.ui.view">
    <field name="name">Odoo Studio: product.template.product.form customization</field>
    <field name="model">product.template</field>
    <field name="priority" eval="199"/>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <!-- <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='notes']/group[not(@name)][1]/group[3]" position="replace">
        <field name="quote_description"/>
      </xpath> -->
      <!-- <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='purchase']/group[@name='costing']/group[@name='replenishment_cost']/div[@name='replenishment_base_cost']/label[2]" position="replace"/> -->
      <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='purchase']/group[@name='costing']/group[@name='replenishment_cost']/div[@name='replenishment_base_cost']/field[@name='replenishment_base_cost_on_currency']" position="replace"/>
      <xpath expr="//field[@name='standard_price']" position="attributes">
        <attribute name="attrs">{"readonly": [["valuation","=","real_time"]]}</attribute>
      </xpath>
      <button name="action_view_sales" position="before">
        <xpath expr="//div[@name='button_box']//button[@name='action_view_related_putaway_rules']" position="move"/>
      </button>
      <!-- <xpath expr="//field[@name='standard_price_ids']" position="attributes">
        <attribute name="attrs">{}</attribute>
        <attribute name="invisible">1</attribute>
      </xpath> -->
      <xpath expr="//field[@name='abc_sales_combined']" position="after">
        <field name="website_sequence"/>
        <field name="sequence"/>
      </xpath>
      <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='purchase']/group[@name='costing']/group[@name='replenishment_cost']/div[@name='replenishment_base_cost']/field[@name='replenishment_base_cost']" position="attributes">
        <attribute name="attrs">{"invisible": [["replenishment_cost_type","=","supplier_price"]]}</attribute>
      </xpath>
      <xpath expr="//field[@name='seller_ids']" position="inside">
        <tree string="Vendor Information">
          <field name="sequence" widget="handle" modifiers="{}"/>
          <field name="name" can_create="true" can_write="true" modifiers="{&quot;required&quot;: true}"/>
          <field name="product_id" invisible="context.get('product_template_invisible_variant', False)" on_change="1" can_create="true" can_write="true" studio_groups="[{&quot;id&quot;: 120, &quot;name&quot;: &quot;Manage Product Variants&quot;, &quot;display_name&quot;: &quot;Technical Settings / Manage Product Variants&quot;}]" modifiers="{&quot;column_invisible&quot;: false}"/>
          <field name="product_tmpl_id" string="Product" invisible="context.get('visible_product_tmpl_id', True)" can_create="true" can_write="true" modifiers="{&quot;column_invisible&quot;: true}"/>
          <field name="min_qty" modifiers="{&quot;required&quot;: true}"/>
          <field name="delay" modifiers="{&quot;required&quot;: true}"/>
          <field name="net_price" widget="monetary" options="{'currency_field': 'currency_id'}" modifiers="{}"/>
          <field name="currency_id" invisible="1" on_change="1" can_create="true" can_write="true" modifiers="{&quot;column_invisible&quot;: true, &quot;required&quot;: true}"/>
          <field name="date_start" modifiers="{}"/>
          <field name="date_end" modifiers="{}"/>
        </tree>
      </xpath>
      <xpath expr="//field[@name='location_1']" position="attributes">
        <attribute name="attrs">{}</attribute>
        <attribute name="force_save">True</attribute>
        <attribute name="readonly">1</attribute>
      </xpath>
      <xpath expr="//field[@name='location_2']" position="attributes">
        <attribute name="attrs">{}</attribute>
        <attribute name="force_save">True</attribute>
        <attribute name="readonly">1</attribute>
      </xpath>
      <!-- <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='inventory']/group[@name='inventory']/group[@name='putaway']/field[@name='product_putaway_ids']/tree[1]/field[@name='sequence']" position="attributes">
        <attribute name="widget"/>
      </xpath> -->
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7819" model="ir.ui.view">
    <field name="name">Productos &gt; 150 días sin consultar</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
      <filter name="with_planned_price" position="after">
        <filter name="productos_150_dias" string="Productos &gt; 150 días sin consultar" domain="[('replenishment_cost_last_update', '&lt;=', (context_today()-relativedelta(days=120)).strftime('%Y-%m-%d')), (u'name', u'not ilike', u'(CONSULTAR)'), (u'sale_ok', u'=', 1)]"/>
        <filter name="productos_sin_ubica" string="Productos sin ubicacion" domain="[('product_putaway_ids', '=', False)]"/>
      </filter>
    </field>
  </record>


