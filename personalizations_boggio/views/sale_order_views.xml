<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_boggio.ir_ui_view_4424" model="ir.ui.view">
    <field name="name">Boggio Personalization sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="priority">199</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <div class="oe_button_box" name="button_box">
        <button type="object" class="oe_stat_button" name="open_action_followup" icon="fa-list" attrs="{'invisible': [('total_overdue', '=', 0)]}">
          <div class="o_field_widget o_stat_info">
            <span class="o_stat_value">
              <field name="total_overdue" widget='monetary' options="{'currency_field': 'currency_id'}"/>
            </span>
            <span class="o_stat_text">Vencido</span>
          </div>
        </button>
      </div>
      <button name="add_products_to_quotation" position="attributes">
        <attribute name="context">{'disable_location_filter': 1, 'search_default_empty_search': 1}</attribute>
      </button>
      <field name="date_order" position="replace"/>
      <field name="validity_days" position="replace"/>
      <field name="validity_date" position="replace"/>
      <field name="payment_term_id" position="replace"/>
      <field name="pricelist_id" position="after">
        <field name="payment_term_id"/>
        <field name="create_uid" readonly="1"/>
      </field>
      <xpath expr="//notebook" position="before">
        <group>
          <group>
            <field name="date_order"/>
            <field name="validity_days" string="Validity of Budget Day"/>
            <field name="validity_date" string="Effective Date Budget"/>
          </group>
          <group>
            <field name="commitment_date"/>
            <field name="effective_date"/>
            <field name="sale_preparetion_time"/>
            <field name="date_order" on_change="onchange_requested_date(date_order, commitment_date)" string="Fecha de entrega requerida"/>
            <div class="oe_title">
              <button name="update_requested_date" string="â‡’ Update for preparetion time" type="object" class="oe_link"/>
            </div>
          </group>
        </group>
      </xpath>
      <xpath expr="//field[@name='order_line']/tree//field[@name='purchase_price']" position="attributes">
        <attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='number']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='discount1']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='discount2']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='discount3']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='purchase_price']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='analytic_tag_ids']" position="attributes">
        <attribute name="optional">hide</attribute>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
        <field name="product_brand_id" string="Brand" optional="show"/>
        <field name="supplier_code" string="Supplier Code" optional="show"/>
        <field name="internal_code" string="Internal Code" optional="show"/>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="before">
        <button string="On Hand" name="%(personalizations_boggio.ir_act_server_1257)d" icon="fa-building-o" type="action"/>
        <field name="price_reduce" string="Discounted Unit Price" optional="hide"/>
      </xpath>
      <xpath expr="//field[@name='order_line']//tree//field[@name='discount']" position="replace"/>
      <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom']" position="replace"/>
      <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="after">
        <field name="discount" groups="product.group_discount_per_so_line" force_save="1" optional="hide"/>
        <field name="product_uom" optional="hide"/>
      </xpath>
      <button name="action_confirm" position="after">
        <button type="action" name="%(personalizations_boggio.ir_act_server_2551)d" string="Info CC y DV"/>
      </button>
      <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='sequence']" position="attributes">
        <attribute name="widget">handle</attribute>
      </xpath>
      <xpath expr="//field[@name='note']" position="attributes">
        <attribute name="attrs">{"readonly": [["state","in",["done","cancel"]]]}</attribute>
      </xpath>
      <xpath expr="//field[@name='user_id']" position="attributes">
        <attribute name="studio-view-group-ids">10</attribute>
      </xpath>
      <field name="payment_term_id" position="after">
        <field name="x_info_cc"/>
      </field>
      <field name="date_order" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <xpath expr="//field[@name='order_line']//tree" position="inside">
        <field name="x_active" invisible="1"/>
      </xpath>
      <xpath expr="//field[@name='order_line']//form" position="inside">
        <field name="x_active" invisible="1"/>
      </xpath>
      <tree decoration-info="(not display_type and invoice_status == 'to invoice')" position="attributes">
        <attribute name="decoration-danger">(not display_type and x_active==False)</attribute>
      </tree>
    </field>
  </record>
