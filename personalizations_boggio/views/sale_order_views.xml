  <record id="personalizations_boggio.ir_ui_view_7795" model="ir.ui.view">
    <field name="name">ordenar grilla de productos</field>
    <field name="model">sale.order</field>
    <field name="priority">299</field>
    <field eval="[(6, 0, [ref('base.group_user')])]" name="groups_id"/>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <button name="%(personalizations_boggio.ir_act_server_1257)d" position="replace"/>
      <xpath expr="//tree//field[@name='analytic_tag_ids']" position="replace"/>
      <xpath expr="//tree//field[@name='tax_id']" position="replace"/>
      <!-- <xpath expr="//tree//field[@name='virtual_available']" position="replace"/> -->
      <xpath expr="//tree//field[@name='price_subtotal']" position="after">
        <button string="On Hand" name="%(personalizations_boggio.ir_act_server_1257)d" icon="fa-building-o" type="action"/>
        <button string="Traceability" name="%(personalizations_boggio.ir_act_server_1300)d" icon="fa-arrows-v" type="action"/>
        <button type="action" name="%(personalizations_boggio.ir_act_server_1689)d" string="View Stock Detail" icon="fa-search-plus"/>
        <!-- <field name="virtual_available" groups="sale_stock_availability.see_stock_value"/>  -->
        <field name="currency_id" invisible="1"/>
        <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
        <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
      </xpath>
    </field>
  </record>
