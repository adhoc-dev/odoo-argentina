  <record id="personalizations_boggio.ir_ui_view_7795" model="ir.ui.view">
    <field name="name">ordenar grilla de productos</field>
    <field name="model">sale.order</field>
    <field eval="[(6, 0, [ref('base.group_user')])]" name="groups_id"/>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <data>
        <button name="%(personalizations_boggio.ir_act_server_1257)d" position="replace"/>
        <xpath expr="//tree//field[@name='analytic_tag_ids']" position="replace"/>
        <xpath expr="//tree//field[@name='tax_id']" position="replace"/>
        <xpath expr="//tree//field[@name='virtual_available']" position="replace"/>
        <xpath expr="//tree//field[@name='price_subtotal']" position="after">
          <button string="On Hand" name="%(personalizations_boggio.ir_act_server_1257)d" icon="fa-building-o" type="action"/>
          <button string="Traceability" name="%(personalizations_boggio.ir_act_server_1300)d" icon="fa-arrows-v" type="action"/>
          <button type="action" name="%(personalizations_boggio.ir_act_server_1689)d" string="View Stock Detail" icon="fa-search-plus"/>
          <!-- <field name="virtual_available" groups="sale_stock_availability.see_stock_value"/>  -->
          <field name="currency_id" invisible="1"/>
          <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
          <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
        </xpath>
        <field name="additional_description" position="after">
          <field name="virtual_available" groups="sale_stock_availability.see_stock_value" attrs="{'column_invisible': [('parent.state', 'not in', ['draft', 'sent'])]}"/>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_boggio.ir_ui_view_7796" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.order.form customization</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <data>
        <button name="action_done" position="after">
          <button type="action" name="%(personalizations_boggio.ir_act_server_2551)d" string="Info CC y DV"/>
        </button>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='sequence']" position="attributes">
          <attribute name="widget">integer</attribute>
        </xpath>
        <xpath expr="//field[@name='note']" position="attributes">
          <attribute name="attrs">{"readonly": [["state","in",["done","cancel"]]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='user_id']" position="attributes">
          <attribute name="studio-view-group-ids">10</attribute>
        </xpath>
        <field name="payment_term_id" position="after">
          <field name="x_info_cc"/>
        </field>
      </data>
    </field>
  </record>
