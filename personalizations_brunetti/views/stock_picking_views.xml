<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Stock picking : add batch picking id -->
    <record id="view_picking_tree_brunetti" model="ir.ui.view">
        <field name="name">Vista Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="replace">
                <field name="picking_type_code"/>
                <field name="partner_id" attrs="{'invisible': [('picking_type_code', '=', 'incoming')]}"/>
            </field>
        </field>
    </record>
    <!-- Stock picking : add batch search -->
    <record id="view_picking_form_brunetti" model="ir.ui.view">
        <field name="name">Vista Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'invisible': [('picking_type_code', '=', 'incoming')]}</attribute>
            </field>
        </field>
    </record>
    <record id="view_picking_tree_show_partner_id_incoming" model="ir.ui.view">
        <field name="name">Vista Mostrar Recibir De</field>
        <field name="model">stock.picking</field>
        <field name="groups_id" eval="[(4, ref('show_partner_id_incoming'))]"/>
        <field name="inherit_id" ref="view_picking_tree_brunetti"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
              <attribute name="attrs">{}</attribute>
            </field>
        </field>
    </record>
    <record id="view_picking_form_show_partner_id_incoming" model="ir.ui.view">
        <field name="name">Vista Mostrar Recibir De</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="view_picking_form_brunetti"/>
        <field name="groups_id" eval="[(4, ref('show_partner_id_incoming'))]"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
              <attribute name="attrs">{}</attribute>
            </field>
        </field>
    </record>
</odoo>
