<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Work Centers -->
        <record model="ir.ui.view" id="mrp_production_workorder_tree_view_inherit">
            <field name="name">mrp.production.work.order.tree.inh</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view_inherit"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="wh_production_done" />
                </field>
            </field>
        </record>

        <record id="mrp_production_workorder_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.work.order.form.inh</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
            <field name="arch" type="xml">
                <field name="is_produced" position="before">
                    <field name="wh_production_done" />
                </field>
            </field>
        </record>

        <record id="view_mrp_production_workorder_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.production.work.order.inherit</field>
        <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_workorder_form_view_filter"/>
            <field name="arch" type="xml">
                    <filter name="late" position="after">
                        <separator/>
                        <filter string="Material Entregado" name="filter_wh_done" domain="[('wh_production_done', '=', 'done')]"/>
                        <filter string="Material No Entregado" name="filter_wh_draft" domain="[('wh_production_done', '=', 'draft')]"/>
                    </filter>
                    <filter name="work_center" position="before">
                        <filter string="Material Entregado" name="filter_wh_done_group" domain="[]" context="{'group_by': 'wh_production_done'}"/>
                    </filter>
            </field>
        </record>

    </data>
</odoo>
