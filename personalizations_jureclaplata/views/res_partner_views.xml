<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="res_partner_form_view_personalization" model="ir.ui.view">
        <field name="name">res.partner.form.personalization</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="dni" position="before">
                <field name="curso_actual" attrs="{'invisible': [('partner_type','!=','student')]}"/>
            </field>
            <field name="dni" position="after">
                <field name="student_code" attrs="{'invisible': [('partner_type','!=','student')]}"/>
            </field>
        </field>
    </record>

    <record id="view_academic_partner_filter" model="ir.ui.view">
        <field name="name">academic.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="student_code"/>
            </search>
        </field>
    </record>
</odoo>
