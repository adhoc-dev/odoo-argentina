<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_subscription_view_form" model="ir.ui.view">
    <field name="name">personalizations.subscription.view.form</field>
    <field name="model">sale.subscription</field>
    <field ref="sale_subscription.sale_subscription_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
        <field name="partner_id" position="after">
          <field name="student_id"/>
          <field name="curso_actual"/>
        </field>
    </field>
  </record>
  <record id="personalizations_subscription_view_tree" model="ir.ui.view">
    <field name="name">personalizations.subscription.view.tree</field>
    <field name="model">sale.subscription</field>
    <field ref="sale_subscription.sale_subscription_view_list" name="inherit_id"/>
    <field type="xml" name="arch">
        <field name="partner_id" position="after">
          <field name="student_id" optional="hide"/>
        </field>
    </field>
  </record>
  <record id="personalizations_subscription_view_kanban" model="ir.ui.view">
    <field name="name">personalizations.subscription.view.kanban</field>
    <field name="model">sale.subscription</field>
    <field ref="sale_subscription.sale_subscription_view_kanban" name="inherit_id"/>
    <field type="xml" name="arch">
        <field name="code" position="before">
          <div>
            <field name="student_id"/>
          </div>
        </field>
    </field>
  </record>
</odoo>
