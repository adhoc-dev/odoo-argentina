<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.inherit.view.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="nro_entidad_bapro" groups="base.group_no_one"/>
            </field>

            <xpath expr="//notebook" position="inside">
                <page string="Vencimientos">
                    <group>
                        <label for="first_due_date_days"></label>
                        <div>
                            <field name="first_due_date_days" widget="integer"/>
                        </div>
                        <label for="second_due_date_days"></label>
                        <div>
                            <field name="second_due_date_days" widget="integer"/>
                        </div>
                        <label for="surcharge"></label>
                        <div>
                            <field name="surcharge"/>
                        </div>
                    </group>
                </page>
                <page string="Header - Reportes">
                    <group>
                        <field name="header_left" widget="html"/>
                    </group>
                    <group>
                        <field name="header_right" widget="html"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
