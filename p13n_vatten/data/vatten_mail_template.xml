<odoo>
    <data noupdate="1">
        <record id="vatten_mail_template" model="mail.template">
            <field name="name">Vatten report</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="subject">{{ object.name }} Report</field>
            <field name="email_to">{{ (object.partner_id.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="report_template" ref="fsm_vatten_report"/>
            <field name="report_name">Worksheet {{ object.name }}{{ (' - ' + object.partner_id.name) if object.partner_id else '' }}.pdf</field>
            <field name="body_html" type="html">
                <div style="font-family: Open Sans; margin: 0px; padding: 0px;">
                    <p style="font-family: 'Helvetica'; margin: 0px; padding: 0px; font-size: 14px;">
                        Estimado/a: <t t-out="object.partner_id.name or 'Customer'"></t>
                        <br/><br/>
                        Se adjunta el Protocolo 
                        <span style="font-weight: bold;">
                            <t t-out="object.name"/>
                        </span>
                        del muestreo realizado en 
                        <span style="font-weight: bold;">
                            <t t-out="object.partner_id.parent_id.name"/>
                        </span>
                        <t t-if="object.planned_date_end">
                            el <span style="font-weight: bold;"><t  t-out="object.date_sampling"/></span>
                        </t>
                        <br/><br/>
                        Por favor no dude en contactarnos ante cualquier duda.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
