<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_robertocala.ir_ui_view_4098">
    <field name="name">Vista Personalizada: Para uso de pistola lectora de Code</field>
    <field name="model">stock.move.line</field>
    <field ref="stock.stock_move_line_view_search" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <!--esto es para poder usar el escaner de codigo de barra y que por defecto se necesita que el campo producto es primero para cuando van agregando cantidad -->
        <field name="product_id" position="replace"/>
        <field name="picking_id" position="before">
          <field name="product_id"/>
        </field>
      </data>
    </field>
  </record>
</odoo>
