<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_robertocala.ir_ui_view_4106">
    <field name="name">Vista personalizada</field>
    <field name="model">product.template</field>
    <field ref="product.product_template_only_form_view" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <field name="barcode" position="after">
          <field name="x_operation_type"/>
        </field>
        <field name="type" position="after">
          <field name="x_other_sale_description"/>
        </field>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_robertocala.odoo_studio_product__430ac912-ed19-4c4e-be5a-0750456d6808">
    <field name="name">Odoo Studio: product.template.product.tree customization</field>
    <field name="model">product.template</field>
    <field ref="product.product_template_tree_view" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//tree[1]" position="attributes">
          <attribute name="editable">top</attribute>
        </xpath>
        <xpath expr="//field[@name='sequence']" position="after">
          <field name="barcode"/>
          <field name="image_128" widget="image" string="Imagen"/>
        </xpath>
        <xpath expr="//field[@name='default_code']" position="after">
          <field name="description" attrs="{}"/>
          <field name="sellers_product_code" string="Codigo Proveedor"/>
        </xpath>
        <xpath expr="//tree[1]/field[@name='name']" position="after">
          <field name="replenishment_base_cost" string="Precio Listas Proveedor" attrs="{}"/>
          <field name="replenishment_cost_rule_id" string="Regla Costo Reposicion"/>
        </xpath>
        <xpath expr="//field[@name='product_brand_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='taxed_lst_price']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='standard_price']" position="after">
          <field name="x_studio_field_4YsN7" string="Categoria Publica"/>
        </xpath>
        <xpath expr="//field[@name='categ_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='type']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='uom_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
