<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record model="ir.ui.view" id="personalizations_robertocala.ir_ui_view_1696">
    <field name="name">price_security.invoice.form.inherit (esta vista no tiene sentido, est√° mal hecha, queda?)</field>
    <field name="model">account.invoice</field>
    <field ref="price_security.invoice_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='invoice_line_tax_ids']" position="attributes">
          <xpath expr="//field[@name='sale_type_id']" position="attributes">
            <attribute name="readonly">1</attribute>
          </xpath>
          <!-- add readonly quantity-->
          <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='quantity']" position="attributes">
            <attribute name="readonly">1</attribute>
          </xpath>
        </xpath>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_robertocala.ir_ui_view_2742">
    <field name="name">Vista Personalizada</field>
    <field name="model">account.invoice</field>
    <field ref="account.invoice_supplier_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <field name="invoice_line_ids" position="before">
          <button name="%(personalizations_robertocala.ir_act_server_1273)d" string="Update Prices" type="action" attrs="{'invisible':[('state','not in',['draft','sent'])]}"/>
        </field>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='account_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='account_analytic_id']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <field name="quantity" position="after">
          <field name="x_replenishment_base_cost_on_currency"/>
        </field>
      </data>
    </field>
  </record>
  <record model="ir.ui.view" id="personalizations_robertocala.ir_ui_view_2777">
    <field name="name">[invoice_operations] Vista Personalizada</field>
    <field name="model">account.invoice</field>
    <field ref="account.invoice_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <button name="%(account.action_account_invoice_refund)d" position="after">
          <button name="%(personalizations_robertocala.ir_act_server_1025)d" type="action" string="Generar Facturas" attrs="{'invisible': ['|',('company_id', '=', 3), ('state', '!=', 'draft')]}" class="oe_highlight"/>
        </button>
      </data>
    </field>
  </record>
</odoo>
