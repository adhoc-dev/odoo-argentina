<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_sale" name="Hide Quotations" inherit_id="sale.portal_my_home_sale">
        <xpath expr="//t[@t-call='portal.portal_docs_entry']" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
    </template>

    <template id="portal_my_home_purchase" name="Hide Requests for Quotation / Purchase Orders" inherit_id="purchase.portal_my_home_purchase" priority="25">
        <xpath expr="//t[@t-call='portal.portal_docs_entry'][3]" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
        <xpath expr="//t[@t-call='portal.portal_docs_entry'][4]" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
    </template>

    <template id="portal_my_home_project" name="Hide Projects / Tasks" inherit_id="project.portal_my_home" priority="40">
        <xpath expr="//t[@t-call='portal.portal_docs_entry'][6]" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
        <xpath expr="//t[@t-call='portal.portal_docs_entry'][7]" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
    </template>

    <template id="portal_my_home_timesheet" name="Hide Timesheets" inherit_id="hr_timesheet.portal_my_home_timesheet" priority="45">
        <xpath expr="//t[@t-call='portal.portal_docs_entry'][8]" position="attributes">
            <attribute name="groups">!base.group_portal</attribute>
        </xpath>
    </template>

</odoo>
