<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_payment_receipt_without_logo" inherit_id="account.report_payment_receipt_document" primary="True">
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">web.basic_layout</attribute>
        </xpath>
    </template>

    <template id="report_payment_receipt_integra">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="p13n_integra.report_payment_receipt_without_logo" t-lang="lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_payment_receipt_integra" model="ir.actions.report">
        <field name="name">Recibo de Pago (Sin Logo)</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">p13n_integra.report_payment_receipt_integra</field>
        <field name="report_file">p13n_integra.report_payment_receipt_integra</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
