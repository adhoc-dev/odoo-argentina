<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_directory_user" model="res.groups">
        <field name="name">public user</field>
        <field name="category_id" ref="base.module_category_directory_telephone"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_private_addresses'), ref('base.group_user')])]"/>
        <field name="comment">The user will be able to read.</field>
    </record>

    <record id="group_directory_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">The user will have access to the directory telephone configuration.</field>
        <field name="category_id" ref="base.module_category_directory_telephone"/>
        <field name="implied_ids" eval="[(4, ref('group_directory_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

<data noupdate="1">
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('group_directory_user')), (4,ref('group_directory_manager'))]"/>
    </record>
</data>
</odoo>

