<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="telephone_page_template">
        <t t-call="website.layout">
            <t t-set="title">Telephone Directory</t>
            <div class="oe_structure">
                <div id="wrap">
                    <br/>
                    <div class="container">
                        <!-- === Snippets' area === -->
                        <div class="oe_structure" />

                        <div class="products_pager form-inline justify-content-center mt-3">
                            <div class="col-md-10 col-md-offset-1">
                                <div>
                                    <form action="/guia" method="get" >
                                        <input type="hidden"/>
                                        <div class="input-group">
                                            <input type="text" name="search" class="search form-control" placeholder="Enter name to search" />
                                            <div class="input-group-btn input-group-lg input-group-md">
                                                <button type="submit" style="background-color:#9CB96A;" class="btn">
                                                    Search
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <br/>
                                <!-- === Snippets' area === -->
                                <div class="oe_structure" />

                                <div class="panel panel-default panel-table">
                                    <div class="panel-body">
                                        <table class="table table-striped table-bordered table-list">
                                            <thead style="background-color:#9CB96A;">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Telephone</th>
                                                    <th>Street</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="telephones" t-as="telephone">
                                                    <tr>
                                                        <td>
                                                            <t t-esc="telephone.name"/>
                                                        </td>
                                                        <td>
                                                            <t t-esc="telephone.phone"/>
                                                        </td>
                                                        <td>
                                                            <t t-esc="telephone.street"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                    <t t-if="not telephones">
                                        <div class="alert alert-info alert-dismissible">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
                                            <strong>Note:</strong> Write for search by Name, telephone or street.
                                        </div>
                                    </t>
                                    <br/>
                                    <div class="products_pager form-inline justify-content-center mt-3">
                                        <t t-call="website.pager">
                                            <t t-set="_classes">ml-2</t>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>

                        <!-- === Snippets' area === -->
                        <div class="oe_structure" />
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="telephone_id" model="website.page">
        <field name="name">Directory Telephone</field>
        <field name="website_published">True</field>
        <field name="url">/guia</field>
        <field name="view_id" ref="telephone_page_template"/>
    </record>

</odoo>
