<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_location_form" model="ir.ui.view">
        <field name="name">stock.location.form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button string="Sync Stock"
                        class="oe_stat_button"
                        icon="fa-refresh"
                        name="sync_location_stock"
                        type="object"/>
            </div>
            <group name="additional_info" position="after">
                <group string="External Stock">
                    <field name="external_stock_source" attrs="{'invisible': [('usage', '!=', 'internal')]}"/>
                    <field name="odoo_hostname" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')], 'required': [('external_stock_source', '=', 'odoo_database')]}"/>
                    <field name="odoo_db_name" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')], 'required': [('external_stock_source', '=', 'odoo_database')]}"/>
                    <field name="odoo_user" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')], 'required': [('external_stock_source', '=', 'odoo_database')]}"/>
                    <field name="odoo_password" password="True" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')], 'required': [('external_stock_source', '=', 'odoo_database')]}"/>
                    <field name="external_location_ids" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')], 'required': [('external_stock_source', '=', 'odoo_database')]}"/>
                    <field name="last_sync" attrs="{'invisible': [('external_stock_source', '!=', 'odoo_database')]}"/>
                </group>
            </group>
        </field>
    </record>

    <record id="view_location_tree2" model="ir.ui.view">
        <field name="name">stock.location.tree</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="external_stock_source" optional="show"/>
                <field name="odoo_db_name" optional="show"/>
            </field>
        </field>
    </record>

</odoo>
