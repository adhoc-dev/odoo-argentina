<odoo>
    <template id="x_new_fields" inherit_id="website_sale.address" name="Apromark Fields" customize_show="True" active="True">
        <div t-attf-class="form-group #{error.get('street2') and 'o_has_error' or ''} col-lg-12 div_street2" position="replace"/>
        <div t-attf-class="form-group #{error.get('company_name') and 'o_has_error' or ''} col-lg-6" position="replace"/>
        <div id="div_phone" position="replace">
            <div id="div_phone" t-attf-class="form-group #{error.get('mobile') and 'o_has_error' or ''} col-lg-6">
                <label class="col-form-label" for="mobile">MÃ³vil</label>
                <input type="tel" name="mobile" t-attf-class="form-control #{error.get('mobile') and 'is-invalid' or ''}" t-att-value="'mobile' in checkout and checkout['mobile']" />
            </div>
            <div t-attf-class="form-group #{error.get('birthdate') and 'o_has_error' or ''} col-lg-6" id="div_birthdate">
                <label class="col-form-label" for="birthdate">Fecha de Nacimiento</label>
                <input type="date" name="birthdate" min="1900-01-01" t-attf-class="form-control #{error.get('birthdate') and 'is-invalid' or ''} datetimepicker-input" t-att-value="birthdate" data-date-format="YYYY-MM-DD" placeholder="YYYY-MM-DD"/>
            </div>
            <div t-attf-class="form-group #{error.get('highschool_complete') and 'o_has_error' or ''} col-lg-6" id="div_highschool_complete">
                <label class="col-form-label" for="highschool_complete">Secundario Completo</label>
                <input type="checkbox" name="highschool_complete" t-att-checked="highschool_complete == True"/>
            </div>
        </div>
    </template>
</odoo>

