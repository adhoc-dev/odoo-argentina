<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <!-- Add you code here -->
        <!-- crm.lead inherit form view -->
        <record id="crm_lead_view_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.inherit.view.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="team_id" position="after">
                    <field name="product_id"/>
                    <field name="location_id"/>
                </field>
                <xpath expr="//field[@name='is_blacklisted']//../field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'res_partner_search_mode': type == 'opportunity' and 'customer' or False,'default_name': contact_name or partner_name,'default_street':street,'default_is_company':False,'default_company_name': type == 'opportunity' and partner_name,'default_street2': street2,'default_city': city,'default_title': title,'default_state_id': state_id,'default_zip': zip,'default_country_id': country_id,'default_function': function,'default_phone': phone,'default_mobile': mobile,'default_email': email_from,'default_user_id': user_id,'default_team_id': team_id,'default_website': website,'show_vat': True,}</attribute>
                </xpath>
            </field>
        </record>
        <record id="crm_case_tree_view_leads_inherit" model="ir.ui.view">
            <field name="name">crm.lead.inherit.view.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <field name="phone" position="replace">
                    <field name="mobile" optional="show" class="o_force_ltr"/>
                </field>
                <field name="contact_name" position="replace">
                    <field name="partner_id" string="Alumno"/>
                </field>
                <field name="tag_ids" position="attributes">
                    <attribute name="optional">show</attribute>
                </field>
                <field name="tag_ids" position="after">
                    <field name="product_id"/>
                </field>
                <field name="priority" position="after">
                    <field name="campaign_id"/>
                    <field name="medium_id"/>
                    <field name="source_id"/>
                    <field name="referred"/>
                </field>
            </field>
        </record>
        <record id="crm_lead_tree_opportunity_inherit" model="ir.ui.view">
            <field name="name">crm.opportunity.inherit.view.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <field name="tag_ids" position="attributes">
                    <attribute name="optional">show</attribute>
                </field>
                <field name="tag_ids" position="after">
                    <field name="product_id"/>
                </field>
                <xpath expr="//field[@name='user_id']" position="replace"/>
                <xpath expr="//field[@name='create_date']" position="before">
                    <field name="user_id" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='create_date']" position="after">
                    <field name="date_closed" optional="show" widget="date"/>
                </xpath>
            </field>
        </record>
        <record id="crm.crm_lead_action_pipeline_view_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
        </record>
        <record id="crm.crm_lead_action_pipeline_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
        </record>
</odoo>
