<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_group_form_inherit" model="ir.ui.view">
            <field name="name">vista personalizada</field>
            <field name="model">account.payment.group</field>
            <field name="inherit_id" ref="account_payment_group.view_account_payment_group_form"/>
            <field name="arch" type="xml">
                <field name="payment_date" position="attributes">
                    <attribute name="attrs">{'readonly': [('partner_type','=','customer')]}</attribute>
                </field>
                <!-- Ticket 37394 -->
                <field name="communication" position="after">
                    <field name="fecha_comprobante"/>
                    <field name="nro_comprobante"/>
                    <!-- Ticket 40840 -->
                    <field name="nro_cuota"/>
                    <field name="mes"/>
                    <field name="collector_id"/>
                </field>
            </field>
        </record>
        <!-- tree view modification -->
        <record id="view_account_payment_group_tree_inherit" model="ir.ui.view">
            <field name="name">Vistas Personalizada</field>
            <field name="model">account.payment.group</field>
            <field name="inherit_id" ref="account_payment_group.view_account_payment_group_tree"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <!-- Ticket 37394 -->
                <field name="payments_amount" sum="Total"/>
                <field name="partner_id" position="before">
                    <field name="fecha_comprobante"/>
                    <field name="nro_comprobante"/>
                    <!-- Ticket 40840 -->
                    <field name="nro_cuota" optional="show"/>
                    <field name="mes" optional="show"/>
                </field>
                <field name="payment_methods" position="after">
                    <field name="collector_id"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_payment_group_search">
            <field name="name">account.payment.group.filter</field>
            <field name="model">account.payment.group</field>
            <field name="inherit_id" ref="account_payment_group.view_account_payment_group_search"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <field name="payment_methods" position="after">
                    <field name="fecha_comprobante"/>
                    <field name="nro_comprobante"/>
                    <field name="collector_id"/>
                    <group expand="0" string="Group By..."><filter string="Cobrado por" name="group_by_collector" domain="[]" context="{'group_by':'collector_id'}"/></group>
                </field>
            </field>
        </record>
    </data>
</odoo>
