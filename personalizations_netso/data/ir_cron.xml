<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="p13n_avg_payment_days" model="ir.cron">
        <field name="name">Actualizar promedio dias de pago</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="state">code</field>
        <field name="binding_type">action</field>
        <field name="code">model.ir_cron_update_avg_payment_days()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 20:%M:%S')"/>
        <field name="numbercall">-1</field>
        <field eval="True" name="doall"/>
    </record>
</odoo>
