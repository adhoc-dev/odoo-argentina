<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_sba.odoo_studio_product__4b4c678c-ee94-47c7-af0d-d80f1af4430f" model="ir.ui.view">
    <field name="name">Odoo Studio: product.template.product.form customization</field>
    <field name="model">product.template</field>
    <field ref="product.product_template_only_form_view" name="inherit_id"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='barcode']" position="attributes">
          <attribute name="attrs">{}</attribute>
        </xpath>
        <xpath expr="//field[@name='barcode']" position="after">
          <field name="x_studio_field_5G9jj" string="ISBN"/>
        </xpath>
        <xpath expr="//field[@name='hs_code']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]" position="inside">
          <page name="studio_page_ZcH4e" string="Editorial">
            <group name="studio_group_ZcH4e">
              <group name="studio_group_ZcH4e_left">
                <field name="x_studio_field_EqNtz" string="Editorial"/>
              </group>
              <group name="studio_group_ZcH4e_right">
                <field name="x_studio_field_euxHW" string="Autor"/>
              </group>
            </group>
          </page>
          <page name="studio_page_gCBAa" string="Clasificación SBA">
            <group name="studio_group_gCBAa">
              <group name="studio_group_gCBAa_left">
                <field name="x_studio_field_NlwHP" string="Familia"/>
                <field name="x_studio_field_Bn7Ka" string="Presupuesto"/>
                <field name="x_studio_field_8WqdD" string="Subcategoria"/>
                <field name="x_studio_field_nqwdw" string="Versión"/>
                <field name="x_studio_field_k203V" string="Idioma"/>
              </group>
              <group name="studio_group_gCBAa_right"/>
            </group>
          </page>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_sba.odoo_studio_product__88bfecd5-0166-4e8b-8fb3-fe7731892749" model="ir.ui.view">
    <field name="name">Odoo Studio: product.template.product.tree customization</field>
    <field name="model">product.template</field>
    <field ref="product.product_template_tree_view" name="inherit_id"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='sequence']" position="after">
          <field name="x_studio_field_5G9jj"/>
        </xpath>
        <xpath expr="//field[@name='virtual_available']" position="after">
          <field name="x_studio_field_EqNtz"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_sba.odoo_studio_product__4c0e90a7-5b92-446b-b157-d2c8f06698df" model="ir.ui.view">
    <field name="name">Odoo Studio: product.template.search customization</field>
    <field name="model">product.template</field>
    <field ref="product.product_template_search_view" name="inherit_id"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='attribute_line_ids']" position="after">
          <field name="x_studio_field_euxHW"/>
          <field name="x_studio_field_EqNtz"/>
        </xpath>
        <xpath expr="//filter[@name='groupby_main_seller_id']" position="after">
          <filter context="{'group_by': 'categ_id'}" name="categ_id" string="Categoria Interna"/>
          <filter context="{'group_by': 'x_studio_field_NlwHP'}" name="x_studio_field_NlwHP" string="Familia"/>
          <filter context="{'group_by': 'x_studio_field_Bn7Ka'}" name="x_studio_field_Bn7Ka" string="Presupuesto"/>
          <filter context="{'group_by': 'x_studio_field_nqwdw'}" name="x_studio_field_nqwdw" string="Versión"/>
          <filter context="{'group_by': 'x_studio_field_euxHW'}" name="x_studio_field_euxHW" string="Autor"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
