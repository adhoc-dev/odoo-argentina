<?xml version="1.0"?>
<odoo>
    <template id="invoice_term" inherit_id="account.report_invoice_document_with_payments">
        <xpath expr="//t[@t-if='len(payments_vals) &gt; 0']" position="replace">
            <tr class="border-black o_subtotal" style="">
                <td><strong>TOTAL A ABONAR HASTA EL</strong><br/><strong><span t-field="o.invoice_date_due"/></strong></td>
                <td class="text-right">
                <span t-field="o.amount_residual"/>
                </td>
            </tr>
            <![CDATA[
            &nbsp;
            ]]>
            <tr class="border-black o_total">
                <td>TOTAL CON RECARGO LUEGO DEL<br/><span t-field="o.invoice_date_due"/></td>
                <td class="text-right">
                <span class="text-nowrap" t-field="o.x_monto_cargo"/>
                </td>
            </tr>
        </xpath>
    </template>

    <template id="invoice_isbn_and_fontsize" inherit_id="account.report_invoice_document">
       <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_x_isbn"><span>ISBN</span></th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="before">
            <td name="account_invoice_line_isbn"><span t-field="line.x_isbn" t-options="{'widget': 'text'}" style="font-size:13px;"/></td>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
            <td name="account_invoice_line_name" style="font-size:13px;"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
        </xpath>
        <xpath expr="//span[@t-field='line.quantity']" position="replace">
           <span t-field="line.quantity" style="font-size:13px;"/>
        </xpath>
         <xpath expr="//span[@t-field='line.price_unit']" position="replace">
       <span class="text-nowrap" t-field="line.price_unit" style="font-size:13px;"/>
        </xpath>
         <xpath expr="//span[@t-field='line.price_total']" position="replace">
       <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" style="font-size:13px;"/>
        </xpath>
         <xpath expr="//span[@t-field='line.discount']" position="replace">
        <span class="text-nowrap" t-field="line.discount" style="font-size:13px;"/>
        </xpath>
    </template>

    <template id="invoice_delete_total" inherit_id="account.report_invoice_document">
       <xpath expr="//tr[hasclass('o_total')]" position="replace"/>
    </template>

     <template id="payment_method_personalization" inherit_id="account.report_invoice_document">
        <p name="comment" position="before">
          <t t-foreach="o.payment_group_ids" t-as="p">
          <p> Pago mediante <b><span t-field="p.payment_methods"/></b>  en recibo: <b><span t-field="p.name"/></b>
           </p>
           <br/>
          </t>
        </p>
    </template>
    </odoo>
