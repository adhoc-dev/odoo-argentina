<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_sba.ir_ui_view_1959" model="ir.ui.view">
    <field name="name">isbn</field>
    <field name="model">sale.order</field>
    <field ref="sale.view_order_form" name="inherit_id"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
          <field name="x_isbn_order_line"/>
        </xpath>
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
          <attribute name="attrs">{'column_invisible': [('parent.state', '!=', 'draft')]}</attribute>
        </xpath>
    </field>
  </record>
  <record id="personalizations_sba.odoo_studio_sale_ord_d61c6bc4-bad2-467d-a945-30636acbe519" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.order.form customization</field>
    <field name="model">sale.order</field>
    <field ref="sale.view_order_form" name="inherit_id"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='pricelist_id']" position="attributes">
          <attribute name="attrs">{"readonly": [["state","not in",["sent"]]]}</attribute>
        </xpath>
        <xpath expr="//field[@name='origin']" position="attributes">
          <attribute name="attrs">{}</attribute>
        </xpath>
    </field>
  </record>
  <record id="personalizations_sba.odoo_studio_sale_ord_8faab9fb-5808-4a5a-9f1c-65dfc44fff66" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.order.tree customization</field>
    <field name="model">sale.order</field>
    <field ref="sale.view_order_tree" name="inherit_id"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_status']" position="after">
          <field name="origin"/>
        </xpath>
    </field>
  </record>
  <record id="personalizations_sba.odoo_studio_sale_ord_54504b35-d373-49d3-9e41-046c981a59bd" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.order.search.inherit.sale customization</field>
    <field name="model">sale.order</field>
    <field ref="sale.sale_order_view_search_inherit_sale" name="inherit_id"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='analytic_account_id']" position="after">
          <field name="internal_notes"/>
        </xpath>
        <xpath expr="//field[@name='store_id']" position="after">
          <field name="origin"/>
        </xpath>
        <xpath expr="//search[1]/group[1]/filter[not(@name)][3]" position="after">
          <filter context="{'group_by': 'invoice_status'}" name="invoice_status" string="Estado de Factura"/>
        </xpath>
    </field>
  </record>
</odoo>
