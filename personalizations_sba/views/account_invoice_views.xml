<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_sba.ir_ui_view_1879" model="ir.ui.view">
    <field name="name">isbn.inherit</field>
    <field name="model">account.move</field>
    <field ref="account.view_move_form" name="inherit_id"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
          <field name="x_isbn"/>
        </xpath>
        <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
          <attribute name="attrs">{'column_invisible': [('parent.state', '!=', 'draft')]}</attribute>
        </xpath>
    </field>
  </record>
  <record id="personalizations_sba.ir_ui_view_2088" model="ir.ui.view">
    <field name="name">Vista Personalizada(Recargo por mora)</field>
    <field name="model">account.move</field>
    <field ref="account.view_move_form" name="inherit_id"/>
    <field name="arch" type="xml">
        <header position="after">
          <field name="x_state_invoice" invisible="1"/>
          <!--<field name="x_invoice_nd_id" invisible="0"/>-->
          <div groups="account.group_account_invoice" class="alert alert-info" role="alert" style="margin-bottom:0px;" attrs="{'invisible': ['|', '|', ('x_state_invoice','!=','vencida_sin_nd'),('type', 'not in', ['out_invoice', 'out_refund','out_receipt'])]}">
        Tiene una factura vencida y sin ND generada para generarla haga click<bold><button name="create_debt_invoice" string="â‡’ Generar ND" class="oe_link oe_inline" type="object"/></bold>
</div>
          <div groups="account.group_account_invoice" class="alert alert-info" role="alert" style="margin-bottom:0px;" attrs="{'invisible': ['|', '|',('x_invoice_nd_id','=', False), ('state','!=','posted'), ('type', 'not in', ['out_invoice', 'out_refund','out_receipt'])]}">
        Tiene una <bold><field name="x_invoice_nd_id" string="ND"/></bold> asociada por intereses
  </div>
        </header>
        <field name="invoice_date_due" position="after">
          <field name="x_fecha_segundo_venc" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund','out_receipt'])]}"/>
        </field>
        <field name="amount_total" position="after">
          <field name="x_monto_cargo" string="Importe a pagar segundo vencimiento" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund','out_receipt'])]}"/>
        </field>
    </field>
  </record>
  <record id="personalizations_sba.ir_ui_view_2089" model="ir.ui.view">
    <field name="name">Vista personalizada(recargo por mora)</field>
    <field name="model">account.move</field>
    <field ref="account.view_invoice_tree" name="inherit_id"/>
    <field name="arch" type="xml">
      <field name="state" position="after">
        <field name="x_state_invoice" invisible="context.get('default_type') not in ('out_invoice', 'out_refund','out_receipt')"/>
      </field>
    </field>
  </record>
  <record id="personalizations_sba.ir_ui_view_2090" model="ir.ui.view">
    <field name="name">Vista Personalizada(Recargo por mora)</field>
    <field name="model">account.move</field>
    <field ref="account.view_account_invoice_filter" name="inherit_id"/>
    <field name="arch" type="xml">
      <filter name="paid" position="after">
        <filter name="Vencida sin notas de debito emitidas" domain="[('x_state_invoice', '=', 'vencida_sin_nd')]"/>
        <filter name="Vencida" domain="[('x_state_invoice', '=', 'vencida')]"/>
        <filter name="No vencida" domain="[('x_state_invoice', '=', 'no_vencida')]"/>
      </filter>
    </field>
  </record>
</odoo>
