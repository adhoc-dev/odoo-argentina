<odoo>
    <data>
    <record id="purchase_suggest_pr_create_form" model="ir.ui.view">
    <field name="name">purchase_suggest_pr_create.form</field>
    <field name="model">purchase.suggest.pr.create</field>
    <field name="arch"  type="xml">
        <form string="Create Purchase Requisitions">
            <p class="oe_grey">
                Click on the green button below to create the purchase requesition.
                If a draft purchase request already exists for one of the suppliers
                for the same stock location, it will be updated with the new
                products and quantities to order.
            </p>
            <group>
              <field name="only_update_if_same_user"/>
              <field name="requisition_type_id"/>
            </group>
            <footer>
                <button type="object" name="create_pr"
                    string="Create Purchase Requisitions" class="oe_highlight"/>
                <button special="cancel" string="Cancel" class="oe_link"/>
            </footer>
        </form>
    </field>
    </record>

    <act_window id="purchase_suggest_pr_create_action"
                name="Create Purchase Requisitions"
                binding_model="purchase.suggest"
                binding_views="list"
                res_model="purchase.suggest.pr.create"
                view_mode="form"
                target="new" />

    </data>
</odoo>
