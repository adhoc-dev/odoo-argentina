<odoo>
    <template id="external_layout_standard" inherit_id="web.external_layout_standard" >
        <xpath expr="//div[@t-field='company.partner_id']/.." position="after">
            <div class="col-1"/>
            <div class="col-6" name="company_info">
                <t t-if="company.vat"><strong>CUIT: </strong><span t-field="company.vat"/></t><br/>
                <t t-if="company.l10n_ar_afip_responsibility_type_id"><strong>Tipo de Responsabilidad AFIP: </strong><br/><span t-field="company.l10n_ar_afip_responsibility_type_id"/></t><br/>
                <span t-att-style="'color: %s;' % o.company_id.secondary_color"><strong>IIBB: </strong></span><span t-esc="o.company_id.l10n_ar_gross_income_type == 'exempt' and 'Exento' or o.company_id.l10n_ar_gross_income_number"/>
            </div>
        </xpath>
    </template>
</odoo>
