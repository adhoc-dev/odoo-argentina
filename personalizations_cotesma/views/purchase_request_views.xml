<odoo>
    <record id="purchase_request_form_personalizations" model="ir.ui.view">
        <field name="name">purchase.request.form.personalizations</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="priority" widget="priority"/>
            </field>
        </field>
    </record>
    <record id="purchase_request_tree_personalizations" model="ir.ui.view">
        <field name="name">purchase.request.tree.personalizations</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_tree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="priority" widget="priority" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
