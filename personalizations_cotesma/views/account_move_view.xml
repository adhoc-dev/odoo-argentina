<?xml version="1.0"?>
<odoo>

  <record id="view_account_move_filter_inherit" model="ir.ui.view">
    <field name="name">account.move.inherit.filter</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_account_move_filter"/>
    <field name="arch" type="xml">
      <field name="partner_id" position="after">
        <field name="date" string="Fecha desde" filter_domain="['|',('date','&gt;=',self),('date','&gt;=',self)]" />
        <field name="date" string="Fecha hasta" filter_domain="['|',('date','&lt;=',self),('date','&lt;=',self)]" />
        <field name="amount_total_signed" string="Monto desde" filter_domain="[('amount_total_signed','&gt;',self)]"/>
        <field name="amount_total_signed" string="Monto hasta" filter_domain="[('amount_total_signed','&lt;',self)]"/>
        <field name="amount_total_signed" string="Monto exacto" filter_domain="['|','|',('amount_total_signed','=',self),('line_ids.debit','=',self),('line_ids.credit','=',self)]"/>
      </field>
    </field>
  </record>

</odoo>
