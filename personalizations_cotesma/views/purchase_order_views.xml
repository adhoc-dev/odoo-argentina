<odoo>
    <!-- le agregramos el permiso al menu de Compras para el usurio solo lectura -->
    <record id="purchase.menu_purchase_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('group_purchase_user_only_read'))]"/>
    </record>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.purchase.user</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
            </form>
            <xpath expr="//button[@name='action_rfq_send'][1]" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][2]" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][3]" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </xpath>
            <button name="restart_validation" position="attributes">
               <attribute name="groups">purchase.group_purchase_user</attribute>
            </button>
            <button id="bid_confirm" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </button>
            <button id="draft_confirm" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </button>
            <button name="button_done" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </button>
            <button name="button_cancel" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </button>
        </field>
    </record>

    <record id="purchase_order_form2" model="ir.ui.view">
        <field name="name">purchase.order.form.purchase.user</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_order_form" />
        <field name="groups_id" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">1</attribute>
                <attribute name="edit">1</attribute>
            </form>
        </field>
    </record>
</odoo>
