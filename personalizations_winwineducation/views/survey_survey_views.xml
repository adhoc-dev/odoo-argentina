<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_page_form_inherit" model="ir.ui.view">
        <field name="name">Vista Personalizada</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <group>
                    <field name="show_anchor_partner"/>
                </group>
            </field>
        </field>
    </record>

    <record id="survey_correct_answer_correction" model="ir.ui.view">
        <field name="name">Vista Correcci√≥n respuesta correcta</field>
        <field name="inherit_id" ref="survey.simple_choice"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@t-as='label']/label" position="attributes">
                <attribute name="t-att-class">' bg-success ' if quizz_correction and label.is_correct else None</attribute>
            </xpath>
        </field>
    </record>
</odoo>
