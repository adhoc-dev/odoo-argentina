<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_winwineducation.odoo_studio_jobs_rec_354e6250-803d-4819-a1c0-81242b2d184b" model="ir.ui.view">
    <field name="name">Odoo Studio: Jobs - Recruitment Form customization</field>
    <field name="model">hr.applicant</field>
    <field ref="hr_recruitment.hr_applicant_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="x_studio_fecha_de_nacimiento" string="Fecha de nacimiento"/>
        </xpath>
        <xpath expr="//field[@name='medium_id']" position="replace">
          <field name="medium_id"/>
        </xpath>
         <xpath expr="//field[@name='medium_id']" position="after">
          <field name="x_reference"/>
        </xpath>
        <xpath expr="//field[@name='partner_mobile']" position="after">
          <field name="x_studio_domicilio" string="Domicilio"/>
          <field name="x_studio_carrera_finalizada" string="Carrera finalizada"/>
        </xpath>
        <xpath expr="//field[@name='survey_id']" position="before">
          <field name="x_studio_antigedad_acreditada_en_docencia" string="Antig체edad acreditada en docencia"/>
          <field name="x_studio_horas_titulares_en_otras_instituciones" string="Horas titulares en otras instituciones" help="S처lo para profesores"/>
        </xpath>
        <xpath expr="//field[@name='company_id']" position="after">
          <field name="x_studio_disponibilidad_horaria"/>
          <field name="x_studio_remuneracin_bruta_pretendida" string="Remuneraci처n bruta pretendida"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5323_2e662c5b" model="ir.ui.view">
    <field name="name">x_evaluations</field>
    <field name="model">hr.applicant</field>
    <field ref="hr_recruitment.hr_applicant_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <field name="description" position="after">
          <notebook>
            <page string="Evaluaciones">
              <field name="x_appraisal_ids" nolabel="1">
                <tree editable="bottom">
                  <field name="x_partner_id" required="1"/>
                  <field name="x_knowledge" attrs="{'readonly': [('x_atual_stage', '=', False)]}"/>
                  <field name="x_honesty" attrs="{'readonly': [('x_atual_stage', '=', False)]}"/>
                  <field name="x_energy" attrs="{'readonly': [('x_atual_stage', '=', False)]}"/>
                  <field name="x_capability" attrs="{'readonly': [('x_atual_stage', '=', False)]}"/>
                  <field name="x_applicant_stage_id" invisible="0" options="{'no_open':True}"/>
                  <field name="x_atual_stage" invisible="1"/>
                </tree>
              </field>
            </page>
          </notebook>
        </field>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5370_b69668a4" model="ir.ui.view">
    <field name="name">x_date_closed</field>
    <field name="model">hr.applicant</field>
    <field ref="hr_recruitment.hr_applicant_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <field name="description" position="before">
        <group>
          <field name="date_closed" string="Fecha de Incorporaci처n Efectiva"/>
        </group>
      </field>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5372_5e4f9b55" model="ir.ui.view">
    <field name="name">x_motive_rejected_proposal</field>
    <field name="model">hr.applicant</field>
    <field ref="hr_recruitment.hr_applicant_view_form" name="inherit_id"/>
    <field eval="False" name="active"/>
    <field type="xml" name="arch">
      <field name="description" position="before">
        <group>
          <field name="x_motive_rejected_proposal_id" attrs="{'invisible': [('stage_id','!=',14)], 'required': [('stage_id','=',14)]}"/>
        </group>
      </field>
    </field>
  </record>
</odoo>
