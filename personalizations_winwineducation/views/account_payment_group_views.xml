<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_winwineducation.ir_ui_view_5412_a0a8bb9f" model="ir.ui.view">
    <field name="name">Cobros tu cuota</field>
    <field name="model">account.payment.group</field>
    <field ref="account_payment_group.view_account_payment_group_search" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <separator position="after">
          <filter string="TuCuota - Borrador" name="payment_token_id" domain="[('payment_ids.payment_transaction_id', '=', False), ('payment_ids.payment_token_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Disponible" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'draft'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Enviado" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'pending'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Aprobado" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'done'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Rechazado" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'error'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Cancelado" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'cancel'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota')]"/>
          <filter string="TuCuota - Aprobado Pero No Validado" name="payment_token_id" domain="[('payment_ids.payment_transaction_id.state', '=', 'done'), ('payment_ids.payment_transaction_id.acquirer_id.name', 'like', 'TuCuota'), ('payment_ids.state', '=', 'draft')]"/>

          <!--<filter string="TuCuota - Credito" name="payment_token_id" domain="[('payment_token_id.x_tc_card_type', '=', 'credit'), ('payment_token_id.acquirer_id.name', 'like', 'TuCuota'), ('payment_token_id.acquirer_id.journal_id', '!=', False)]"/>-->
          <!--<filter string="TuCuota - Credito" domain=""/>-->
          <separator/>
        </separator>
      </data>
    </field>
  </record>
</odoo>
