<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="personalizations_winwineducation.odoo_studio_crm_lead_6a412382-d028-40b7-a25e-3d9d5da6caff" model="ir.ui.view">
    <field name="name">Odoo Studio: crm.lead.form.lead customization</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='mobile']" position="after">
          <xpath expr="//field[@name='function']" position="move"/>
        </xpath>
        <xpath expr="//field[@name='priority']" position="before">
          <field name="x_studio_prioridad_de_contacto" string="Prioridad de contacto"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
          <group name="studio_group_PZ0th">
            <field name="x_studio_responsabletutor" string="Responsable/Tutor" help="Nombre y Apellido"/>
            <field name="x_studio_alumno" string="Alumno" help="Nombre y Apellido"/>
            <field name="x_studio_cmo_nos_conociste" string="¿Cómo nos conociste?"/>
            <field name="x_studio_consultas_adicionales" string="Consultas adicionales"/>
          </group>
          <group name="studio_group_pi7bw">
      </group>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.odoo_studio_crm_lead_779a9483-ffc1-4b9a-88f8-3daa3c44b506" model="ir.ui.view">
    <field name="name">Odoo Studio: crm.lead.form.opportunity customization</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <field name="team_id" position="after">
          <field name="x_type"/>
        </field>
        <xpath expr="//field[@name='partner_id']" position="before">
          <field name="x_studio_responsabletutor"/>
        </xpath>
        <xpath expr="//field[@name='phone']" position="after">
          <field name="x_studio_n_documento_padre" string="N° Documento Padre"/>
          <field name="x_studio_numero_de_documento" string="N° Documento Hijo" attrs="{}"/>
        </xpath>
        <xpath expr="//field[@name='priority']" position="before">
          <field name="x_note" label="nota informativa"/>
          <field name="x_studio_prioridad_de_contacto"/>
        </xpath>
        <xpath expr="//field[@name='tag_ids']" position="attributes">
          <attribute name="attrs">{'required': [('x_type', '=', 'a')]}</attribute>
        </xpath>
        <xpath expr="//field[@name='tag_ids']" position="after">
          <field name="x_history_stages"/>
        </xpath>
        <xpath expr="//field[@name='medium_id']" position="attributes">
          <attribute name="attrs">{'required': [('x_type', '=', 'a')]}</attribute>
        </xpath>
        <xpath expr="//field[@name='medium_id']" position="after">
          <field name="x_studio_cmo_nos_conociste"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_4522_33d3055e" model="ir.ui.view">
    <field name="name">crm_survey</field>
    <field name="model">crm.lead</field>
    <field ref="crm.view_crm_case_opportunities_filter" name="inherit_id"/>
    <field type="xml" name="arch">
      <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
        <separator/>
        <filter name="survey_completed" string="Encuesta Completa" domain="[('response_id.state', '=', 'done')]"/>
        <filter string="Encuesta Parcialmente Completa" name="survey_partially_completed" domain="[('response_id.state', '=', 'skip')]"/>
        <filter string="Encuesta no Iniciada" name="survey_not_started" domain="[('response_id', '=', False)]"/>
        <separator/>
      </xpath>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5305_5075defd" model="ir.ui.view">
    <field name="name">x_student_mother_father_data</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//group/group" position="after">
          <group string="Institución Educativa de Procedencia">
            <field name="x_establishment"/>
            <field name="x_transfer_reason"/>
            <field name="x_companions_relationship"/>
            <field name="x_difficulties_workarea"/>
            <field name="x_difficulties_workarea_description"/>
            <field name="x_areas_student_standout"/>
          </group>
        </xpath>
        <page name="lead" position="after">
          <page string="Datos del Alumno">
            <group context="{'default_x_student_country_id': 10}">
              <field name="x_student_birthdate"/>
              <field name="x_student_country_id"/>
              <field name="phone"/>
            </group>
          </page>
          <page string="Datos de la Madre">
            <group>
              <field name="x_mother_last_name"/>
              <field name="x_mother_first_name"/>
              <field name="x_mother_country_id" context="{'default_id': 10}"/>
              <field name="x_studio_n_documento_madre"/>
              <field name="x_mother_profession"/>
              <field name="x_mother_act_condition"/>
              <field name="x_mother_birthdate"/>
              <field name="x_mother_phone"/>
              <field name="x_mother_nosis"/>
              <field name="x_mother_approve"/>
            </group>
          </page>
          <page string="Datos del Padre">
            <group context="{'default_x_father_country_id':10}">
              <field name="x_father_last_name"/>
              <field name="x_father_first_name"/>
              <field name="x_father_country_id"/>
              <field name="x_studio_n_documento_padre"/>
              <field name="x_father_profession"/>
              <field name="x_father_act_condition"/>
              <field name="x_father_birthdate"/>
              <field name="x_father_phone"/>
              <field name="x_father_nosis"/>
              <field name="x_father_approve"/>
            </group>
          </page>
        </page>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5312_da3d3d58" model="ir.ui.view">
    <field name="name">x_survey</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <button name="action_start_survey" position="attributes">
          <attribute name="context">{'survey_id': survey_id, 'default_x_lead_id': id}</attribute>
          <attribute name="attrs">{'invisible': ['|', ('survey_id','=',False), ('stage_id', 'not in', [4,5,12,13,14])]}</attribute>
        </button>
        <button name="action_print_survey" position="attributes">
          <attribute name="context">{'survey_id': survey_id, 'default_x_lead_id': id}</attribute>
          <attribute name="attrs">{'invisible': ['|', ('survey_id','=',False), ('stage_id', 'not in', [4,5,12,13,14])]}</attribute>
        </button>
      </data>
    </field>
  </record>
  <record id="personalizations_winwineducation.ir_ui_view_5359_dee304be" model="ir.ui.view">
    <field name="name">x_motive_no_vacancy</field>
    <field name="model">crm.lead</field>
    <field ref="crm.crm_lead_view_form" name="inherit_id"/>
    <field type="xml" name="arch">
      <data>
        <page name="lead" position="after">
          <page string="Motivos No Vacante" attrs="{'invisible':[('stage_id','not in',[10,15])]}">
            <group>
              <field name="x_motive_no_vacancy" attrs="{'required':[('stage_id','in',[10,15])]}"/>
              <field name="x_motive_no_vacancy_specification_id" domain="[('x_motive_no_vacancy','=',x_motive_no_vacancy)]" attrs="{'required':[('stage_id','in',[10,15])]}"/>
            </group>
          </page>
        </page>
      </data>
    </field>
  </record>
</odoo>
