<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_tree_personalizations" model="ir.ui.view">
        <field name="name">stock.move.line.tree.personalizations</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock_ux.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field name="picking_type_use_existing_lots" invisible="1"/>
                <field name="expiration_date" force_save="1" attrs="{
                    'readonly': [('picking_type_use_existing_lots', '=', True)],
                }"/>
            </field>
        </field>
    </record>
</odoo>
