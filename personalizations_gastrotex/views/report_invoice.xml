<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <template id="report_invoice_document" inherit_id="l10n_ar_ux.report_invoice_document">

        <!-- Show ORIGINAL al the top of the invoice -->
        <t t-set="report_name" position="attributes">
            <attribute name="t-value"> ("(ORIGINAL) " if "out_" in o.move_type else "")  + o.l10n_latam_document_type_id.report_name</attribute>
        </t>

        <!-- Remove Fecha de Vencimiento from invoice report -->
        <div id="informations" position="after">
            <div t-if="0" id="p13n_hide">
            </div>
        </div>
        <div id="p13n_hide" position="inside">

            <t t-if="o.invoice_date_due" position="move"/>

            <!-- Remove legend added to report when using secondary currency -->
            <p t-if="o._fields.get('move_currency_id') and o.move_currency_id" position="move"/>

        </div>

        <!-- Clean up empty line before payment terms -->
        <xpath expr="//span[@t-field='o.invoice_payment_term_id.name']/../br" position="replace">
        </xpath>

        <!-- Show total en letras -->
        <t t-if="o.l10n_latam_document_type_id.code in ['201', '202', '203', '206', '207', '208', '211', '212', '213']" position="attributes">
            <attribute name="t-if">1</attribute>
        </t>

        <xpath expr="//span[contains(@t-esc, 'amount_to_text')]/../strong" position="replace">
            <strong>Son <t t-esc="o.currency_id.with_context(lang='es_AR').currency_unit_label"/>:</strong>
        </xpath>

    </template>

</odoo>
